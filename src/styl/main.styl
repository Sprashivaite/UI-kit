@import 'utils/*'
@import '../pages/*'
@import '../pages/*/*'
@import '../components/*'
@import '../vendors/*'
*
  box-sizing border-box    
html 
  font-family Montserrat, Arial, sans-serif
  font-style normal
  font-weight normal
  font-size 16px
  color $dark75
  background-color #fff
  line-height 1.15
  height 100%
body
  background-color white
  width 100%
  height 100%
  font-size 14px
  line-height 22px
h1 
  font-family Montserrat, Arial, sans-serif
  font-style normal
  font-weight bold
  font-size 24px
  line-height 30px
  color $dark100
  margin 0px
h2 
  font-family Montserrat, Arial, sans-serif
  font-style normal
  font-weight bold
  font-size 19px
  line-height 24px
  color $dark100
  margin 0px
h3
  font-family Montserrat, Arial, sans-serif
  font-style normal
  font-weight bold
  font-size 12px
  line-height 15px
  text-transform uppercase
  color $dark100
  margin 0px
legend
  font-family Montserrat, Arial, sans-serif
  font-style normal
  font-weight bold
  font-size 12px
  text-transform uppercase
  color $dark100
  margin 4px 0 2px
  padding 0
header
  position relative
footer 
  position relative
  flex-shrink 0
b
  color $dark75
a
  color $dark50
  font-size 14px
p
  margin 0
li
  list-style none
ol
  list-style none
ul
blockquote
  margin 0
  padding 0

a
  text-decoration none
  &:focus
    outline 1px solid $dark25
