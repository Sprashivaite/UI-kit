@import "utils/*"
@import "../pug/pages/*"
@import "../pug/pages/*/*"
@import "../pug/includes/*"
body
  background-color white
  width 100%
  height 100%
h1 
  font-family Quicksand
  font-style normal
  font-weight bold
  font-size 1.5rem
  line-height 1.875rem
  color $dark100
  margin 0px

h2 
  font-family Quicksand
  font-style normal
  font-weight bold
  font-size 1.1875rem
  line-height 1.5rem
  color $dark100
  margin 0px
h3
    font-family Montserrat, sans-serif
    font-style normal
    font-weight bold
    font-size 0.75rem
    line-height 0.9375rem
    text-transform uppercase
    color $dark100
    margin 0px
legend
    font-family Montserrat, sans-serif
    font-style normal
    font-weight bold
    font-size 12px
    text-transform uppercase
    color $dark100
    margin 0px
    padding 0
    margin-top 3px
b
    color: $dark75
a
    color $dark50
    font-size 14px
// html
html 
    font-family Montserrat, sans-serif
    font-style normal
    font-weight normal
    font-size 16px
    line-height 1.5rem
    color $dark75
    @media(max-width 1024px)
        font-size 14px
    @media(max-width 767px)
        font-size 12px
p 
    line-height 24px
    font-size 1rem
    margin 0