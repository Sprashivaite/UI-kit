@import "utils/*"
@import "../pug/pages/*"
@import "../pug/pages/*/*"
@import "../pug/includes/*"
body
  background-color white
  width 100%
  height 100%
  font-size 14px
h1 
  font-family Montserrat
  font-style normal
  font-weight bold
  font-size 24px
  line-height 30px
  color $dark100
  margin 0px

h2 
  font-family Montserrat
  font-style normal
  font-weight bold
  font-size 19px
  line-height 24px
  color $dark100
  margin 0px
h3
    font-family Montserrat, sans-serif
    font-style normal
    font-weight bold
    font-size 12px
    line-height 15px
    text-transform uppercase
    color $dark100
    margin 0px
legend
    font-family Montserrat, sans-serif
    font-style normal
    font-weight bold
    font-size 12px
    text-transform uppercase
    color $dark100
    margin 4px 0 2px;
    padding 0
b
    color: $dark75
a
    color $dark50
    font-size 14px
// html
html 
    font-family Montserrat, sans-serif
    font-style normal
    font-weight normal
    font-size 16px
    line-height 1.5rem
    color $dark75
    @media(max-width 1024px)
        font-size 14px
    @media(max-width 767px)
        font-size 12px
p 
    line-height 24px
    // font-size 1rem
    margin 0
li
    list-style none
ol
    list-style none
ul
    margin 0
    padding 0

a
    text-decoration none