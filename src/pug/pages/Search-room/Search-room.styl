.search-rooms-page
    background-color: #FFFFFF;
    max-width 1440px
    min-height: calc(100vh - 372px);
    height 100%
    margin: 0 auto
.search-rooms-page__options 
    margin-left: 9.8%;
    width: 16.625rem;
    display: flex;
    flex-direction: column; 
    float left 
    height: 748px;
    justify-content: space-between
    margin-right: 4%;
    @media(max-width 430px)
        margin-left: 25%; 
        height: 948px;
        margin-bottom 250px
.search-rooms-page__option-dropdowns 
    min-height 84px
.search-rooms-page__option
    // margin-bottom: 12px;
    // min-height: 93px  
.search-rooms-body
    position relative
    height: 1333px;
    background: #fff;
    margin-top: 1.4375rem;
    padding-bottom 6rem
    @media(max-width 1430px)
        height 100%
.search-rooms-page__title 
    padding-top 0.5rem
    @media(max-width 320px)
        // width  33.0625rem
        padding-left: 20%;
.search-rooms-page__hotels
    // position relative
    width: 850px;
    height: 1108px
    margin-top: 1.25rem;
    display grid
    grid-template: 1fr 1fr 1fr 1fr / 1fr 1fr 1fr 
    grid-row-gap: 4px;
    @media(max-width 1430px)
        // left: 25rem;
        
    @media(max-width 1280px)        
        width: 600px;
        height 1800px
        grid-template: 1fr 1fr 1fr 1fr 1fr 1fr / 1fr 1fr
    @media(max-width 1022px) 
        width: 350px;
        height 3600px
        grid-template: 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr / 1fr
    @media(max-width 430px)
        margin-left 25%
.search-rooms-pagination 
    margin-left: 52.4%;
    margin-top: 1.5rem
    @media(max-width 430px)
        margin-left 20%