.search-rooms-page
    background-color: #FFFFFF;
    max-width 1440px
    min-height: calc(100vh - 372px);
    height 100%
    margin: 0 auto
.search-rooms-page__options 
    margin-left: 9.8%;
    width: 16.625rem;
    display: flex;
    flex-direction: column; 
    float left 
.search-rooms-page__option-dropdowns 
    min-height 84px
    // margin-bottom 20px
.search-rooms-page__option
    margin-bottom: 12px;
    min-height: 93px  
.search-rooms-body
    height: 1333px;
    background: #fff;
    margin-top: 1.4375rem;
.search-rooms-page__title
    position absolute
    left: 29rem;
    top: 0.4rem;
    font-family: Montserrat
    font-weight: bold;
    font-size: 1.5rem;
    line-height: 1.875rem;
    color: #1F2041
.search-rooms-page__hotels
    position relative
    width: 850px;
    height: 1108px
    left: 4.2%;
    top: 3.5rem
    display grid
    grid-template: 1fr 1fr 1fr 1fr / 1fr 1fr 1fr 
    grid-row-gap: 4px;
    @media(max-width 1430px)
        left: 25rem;
        // 
    @media(max-width 1280px)        
        width: 600px;
        height: 100%
        grid-template: 1fr 1fr 1fr 1fr 1fr / 1fr 1fr
    @media(max-width 1022px) 
        width: 100%
        grid-template: 1fr 1fr 1fr 1fr 1fr 1fr / 1fr
.search-rooms-pagination
    position absolute
    left: 47.2rem;
    top: 74.3rem;