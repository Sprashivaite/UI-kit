.room-details-page
  background-color: #FFFFFF;
  min-height: calc(100vh - 372px);
  &__body
    position relative
    min-height: 1423px
    background: #fff;
    max-width 1800px
    margin: 0 auto
    @media(max-width 1080px)
      display: flex;
      flex-direction: column;
      align-items: center;
  &__images
    max-width: 1440px
    margin: 0 auto
    display grid
    grid-template auto auto / auto auto
    @media(min-width 1200px)
      grid-template auto auto /auto auto
    @media(max-width 550px)
      grid-template auto auto auto / auto 
    img 
      object-fit: fill;
      max-width 100%
      @media(max-width 1200px)
        width 100%
    .room-details-page__big-image 
      object-fit: cover;      
      height 100%
      grid-row-start: span 2
      grid-column-start: span 1
      margin: 0 auto      
      @media(min-width 551px) and (max-width 1200px)
        grid-column-start: span 2
        height auto
      @media(max-width 550px)
        grid-column-start: span 1
        grid-row-start: span 1
        height auto
  &__bottom-container
    margin-left: 9.7%;
    margin-top: 70px;
    position relative
    display inline-flex
    flex-wrap: wrap
    max-width 50%
    @media(max-width 1080px)
      max-width 90%
      margin: 70px 20px
  &__about-the-room
    margin-right: 15%;
    margin-bottom 8px

  
.impressions__circle
  margin-top 24px
  height 120px
  position relative
  width: 120px;
  display: inline-block;
.impressions__circle_left
  position absolute
  z-index 2
  width: 120px;
  height: 121px;
  clip: rect(0,60px,121px,0px);
  background-image: linear-gradient(180deg, #FFE39C 0%, #FFBA9C 100%);
  border-radius 50%
  &:before
    content: ''
    position absolute
    top: 5px;
    left: 5px;
    z-index: 3;
    width: 112px;
    height: 111px;
    clip: rect(0,60px,121px,0px);
    background: white;
    border-radius 50%
.impressions__circle_right-top
  position absolute
  left 1px
  z-index 2
  width: 120px;
  height: 121px;
  clip: rect(0,121px,60px,60px);
  background: #C4C4C4;;
  border-radius 50%
  &:before
    content: ''
    position absolute
    top: 6px;
    z-index: 3;
    width: 115px;
    height: 110px;
    clip: rect(0,121px,60px,60px);
    background: white;
    border-radius 50%
.impressions__circle_right-bot
  position absolute
  left: 1px;
  z-index: 2;
  top: 0px;
  width: 120px;
  height: 121px;
  clip: rect(61px,121px,121px,60px)
  background-image: linear-gradient(180deg, #6FCF97 0%, #66D2EA 100%)
  border-radius 50%
  &:before
    content: ''
    position absolute
    top: 0px;
    z-index: 3;
    width: 115px;
    height: 116px;
    clip: rect(61px,121px,121px,60px)
    background: white;
    border-radius 50%
