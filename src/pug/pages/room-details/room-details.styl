.impressions__rating
  display: inline-block;
  margin-left: 43px;
  vertical-align: top;
  margin-top: 50px;
  position relative
  &_well
    &:before
      content: ''
      position absolute
      background: linear-gradient(180deg, #FFE39C 0%, #FFBA9C 100%);
      width: 10px;
      height: 10px;
      border-radius: 50%
      left: -14px;
      margin-top: 6px;
  &_good
    &:before
      content: ''
      position absolute
      background: linear-gradient(180deg, #6FCF97 0%, #66D2EA 100%);
      width: 10px;
      height: 10px;
