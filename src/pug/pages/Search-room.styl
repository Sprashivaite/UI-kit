.search-rooms-page
    background-color: #FFFFFF;
    width 100%
    min-height: calc(100vh - 372px);
.search-rooms-page__options
    margin-top: 25px;
    margin-left: 2.5%;
    width: 266px;
.search-rooms-page__options
    // margin-top 30px
    display grid
    grid-template-rows: 1fr 1fr 1fr auto auto auto;
    grid-row-gap: 30px;
.search-rooms-body
    position relative
    height: 1455px;
    left: 0px;
    top: 0px;
    background: #FFFFFF;
.search-rooms-page__title
    position absolute
    left 40%
    top 0
    font-family: OpenSans
    font-weight: bold;
    font-size: 24px;
    line-height: 30px;
    color: #1F2041
.search-rooms-page__hotels
    position absolute
    width 900px
    height 1300px
    left 30%
    top 3%
    display grid
    grid-template: 1fr 1fr 1fr 1fr / 1fr 1fr 1fr 
    grid-row-gap: 4px;