.Form-Elements
    section.Form-Elements__logo
        +logo

    section.Form-Elements__left-container

        section.Form-Elements__text-field_1
            legend text field
                .text-field__description default
            +text-field({text: "Email"})

        section.Form-Elements__text-field_2
            legend text field
                .text-field__description Hover / Focus
            +text-field({text: "This is pretty awesome"})

        section.Form-Elements__dropdown_field
            legend dropdown
                .text-field__description default
            +dropdown-guests

        section.Form-Elements__masked
            legend masked text field
                .text-field__description default
            +text-field({text: "ДД.ММ.ГГГГ"})

        section.Form-Elements__date-dropdown
            +data-dropdown({ firstLegend:"date Dropdown", secondLegend:"date Dropdown"})

        section.Form-Elements__filter-dropdown
            legend filter date dropdown
            +data-filter

        section.Form-Elements__email
            legend subscription text field
            +text-field({text: "Email", type: "email"})

        section.Form-Elements__dropdown-1
            legend dropdown
                .text-field__description default 
            +dropdown-facilities
        section.Form-Elements__dropdown-expanded
            legend dropdown
                .text-field__description expanded
            +dropdown-facilities


        section.Form-Elements__expandable-checkbox-list
            +expandable-checkbox-list({title:"expandable-checkbox-list"})
        section.Form-Elements__expandable-checkbox-list_2
            +expandable-checkbox-list({title:"expandable-checkbox-list",open: true})
            
        section.Form-Elements__comfort
            +comfort({img: "/assets/img/insert_emoticon.svg", title: "Комфорт", description: "Шумопоглощающие стены"})
        section.Form-Elements__comfort_2
            +comfort({img: "/assets/img/location-city.svg", title: "Удобство", description: "Окно в каждой из спален"})

    section.Form-Elements__middle-container
        section.Form-Elements__checkbox-buttons
            legend Checkbox Buttons
            ul
                li
                    +checkbox({ name: "Можно курить"})
                li
                    +checkbox({ name: "Можно с питомцами"})
                li
                    +checkbox({ name: "Можно пригласить гостей (до 10 человек)"})

        section.Form-Elements__radio-button
            legend radio-buttons
            +radio-button

        section.Form-Elements__toggle
            legend toogle
            .Form-Elements__toggles
                +toggle({checked:true})
                +toggle

        section.Form-Elements__like-button
            legend like-button
            section.Form-Elements__like-buttons
                +like-button
                +like-button({value: 12, checked: true})

        section.Form-Elements__rate-button
            legend rate button
            section.Form-Elements__rate-buttons
                +rate-button({rate:"5"})
                +rate-button({rate: "4"})

        section.Form-Elements__dropdown-2
            legend dropdown
            +dropdown-guests
            
            

        section.Form-Elements__rich-checkbox
            legend Rich Checkbox Buttons
            ul
                li
                    +checkbox({ name: "Ширина коридоров в номере не менее 91 см.", title:"Широкий коридор"})
                li
                    +checkbox({ name: "На 1 этаже вас встретит специалист и проводит до номера.", title:"Помощник для инвалидов"})

        section.Form-Elements__comment
            +comment({name: "Мурад Сарафанов", data:"5 дней назад", img:"/assets/img/murad.jpg", like_value: 12,like_checked: true, text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены,действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."})

    section.Form-Elements__right-container

        section.Form-Elements__slider
            legend Range Slider
            +range-slider

        section.Form-Elements__solid-button
            legend buttons
            .Form-Elements__solid-button_1
                +button({text: "click me"})
            .Form-Elements__solid-button_2
                +button({text: "click me"})

        section.Form-Elements__empty-button
            .Form-Elements__empty-button_1
                +button({type: "_empty", text: "click me"})
            .Form-Elements__empty-button_2
                +button({type: "_empty", text: "click me"})

        section.Form-Elements__button-name
            .button__text_empty click me
            .button__text_empty click me

        section.Form-Elements__long-button
            +button({type: "_long", text: "перейти к оплате"})

        section.Form-Elements__pagination
            legend pagination
            +pagination

        section.Form-Elements__dropdown-3
            legend dropdown
            +dropdown-guests

        section.Form-Elements__bullet-list
            legend Bullet list
            ul
                li 
                    +bullet-list({text: "Нельзя с питомцами"})
                li
                    +bullet-list({text: "Без вечеринок и мероприятий"})
                li
                    +bullet-list({text: "Время прибытия — после 13:00, а выезд до 12:00"})

