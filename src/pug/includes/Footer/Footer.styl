.footer
  position relative
  min-width 320px
  max-width 1440px
  color $dark50
  background #FFFFFF
  margin: 0 auto
  border-top: 1px solid rgba(31, 32, 65, 0.25);
  box-sizing: border-box
  @media(max-width 1180px)
    margin-left 0 20px
.footer__top
  position relative
  max-width: 1160px;
  min-width 320px
  min-height 372px
  box-sizing: border-box;
  margin 6.5625rem auto 20px
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  grid-column-gap: 40px;
  @media(max-width 970px)
    grid-template: 1fr 1fr / 1fr 1fr 1fr 
    grid-row-gap: 40px;
    margin-top: 3.5625rem;
  @media(max-width 759px)
    grid-template: 1fr 1fr 1fr /1fr 1fr
  @media(max-width 520px)
    grid-template: auto 1fr 1fr / 1fr 1fr
  @media(max-width 424px)
    grid-template: auto 1fr 1fr auto 1fr / 1fr
.footer__toxin
  position: relative
  @media(max-width 970px)
    grid-row: 1 / 3
  @media(max-width 759px)
    grid-row: 1 / 1
  @media(max-width 520px)
    grid-column: 1 / 3
  @media(max-width 424px)
    grid-column: 1 / 1
.footer__logo_color
  position: relative;
  top: -5px;
.footer__text
  width 16.25rem
  margin-top: 0.8125rem;
.footer__list
  h3
    margin-bottom 1.1875rem
  li
    margin 0.8125rem  0px 0px 
.footer__subscribe
  width 256px
  top 6.5rem
  h3
    margin-bottom 1.1875rem
  li
    margin 0.9375rem 0px 0px 0px
.footer__email
  margin-top: 1.375rem;
  margin-right: 1.25rem;
  width: 100%;
.footer__bot
  position relative
  border-top 1px solid gray
  min-height 70px
  background #FFFFFF
  box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
.footer__bot-content
  position relative
  max-width 1200px
  background #FFFFFF
  margin: 0 auto
  @media(max-width 500px)
    display: flex;
    justify-content: center;
.footer__copyright
  display: inline-block;
  margin-left 1.25rem
  margin-top 1.4375rem
.footer__cc
  margin-top 23px
  width: 112px
  display inline-block
  float right
  ul
    display: inline-flex;
    justify-content: space-between;
    width 100%
  @media(max-width 500px)
    left: 40%;
    top: 4.25rem
    margin 0

.footer-elem
  position relative
  height: 127px;
  width: 380px;
  margin 120px auto 0
  display flex
  flex-direction column
  justify-content space-between
  align-items center
.footer-elem__Logo 
  flex-basis: 45%;
  width 105px
.footer-elem__toxin
  width 53.19px
.footer-elem__text
  width 560px
  text-align center
.footer-elem__cc
  width: 112px
  display: flex
  justify-content: space-between;
  ul
    display: flex;
    justify-content: space-between;
    width 100%