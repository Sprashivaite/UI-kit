.footer
  min-width 320px
  max-width 1920px
  color $dark50
  background #FFFFFF
  margin: 0 auto
  border-top: 1px solid rgba(31, 32, 65, 0.25);
  box-sizing: border-box
  @media(max-width 1180px)
    margin-left 0 20px
  &__top
    position relative
    max-width: 1160px;
    min-width 320px
    min-height 246px
    box-sizing: border-box;
    margin 6.5625rem auto 20px
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-column-gap: 40px;
    @media(max-width 970px)
      grid-template: 1fr 1fr / 1fr 1fr 1fr 
      grid-row-gap: 40px;
      margin-top: 3.5625rem;
    @media(max-width 759px)
      grid-template: 1fr 1fr 1fr /1fr 1fr
    @media(max-width 520px)
      grid-template: auto 1fr 1fr / 1fr 1fr
    @media(max-width 424px)
      grid-template: auto 1fr 1fr auto 1fr / 1fr
  &__toxin
    @media(max-width 970px)
      grid-row: 1 / 3
    @media(max-width 759px)
      grid-row: 1 / 1
    @media(max-width 520px)
      grid-column: 1 / 3
    @media(max-width 424px)
      grid-column: 1 / 1
  &__logo-color
    position: relative;
    top: -5px;
  &__text
    width 16.25rem
    margin-top: 1rem;
  &__list
    h3
      margin-bottom 1.1875rem
    li
      margin-top 1rem 
  &__subscribe
    width 256px
    h3
      margin-bottom 1.1875rem
  &__email
    margin-top: 25px;
    margin-right: 20px;
    width: 100%;
  &__bot
    border-top 1px solid gray
    min-height 70px
    background #FFFFFF
    box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
  &__bot-content
    position relative
    max-width 1200px
    background #FFFFFF
    margin: 0 auto
    display: flex;
    justify-content: space-between;
    @media(max-width 500px)
      justify-content: center;
  &__copyright
    margin-left 1.25rem
    margin-top 1.4375rem
  &__cc
    margin-top 23px
    width: 112px
    margin-right 20px
    ul
      display: inline-flex;
      justify-content: space-between;
      width 100%
    @media(max-width 500px)
      left: 40%;
      top: 4.25rem
      margin 0

