footer 
  position absolute
  left 0
  bottom 0
.footer
  position relative
  min-width 320px
  max-width 1440px
  height 372px
  color $dark50
  background #FFFFFF
  left 0
  bottom 0
  margin: 0 auto
  grid-row: 2 / 3
  border-top: 1px solid rgba(31, 32, 65, 0.25);
  box-sizing: border-box
  @media(max-width 1180px)
    margin-left 20px
  @media(max-width 970px)
    height 472px
  @media(max-width 759px)
    height 672px
  @media(max-width 520px)
    height 672px
  @media(max-width 424px)
    height 1010px
.footer__top
  position relative
  max-width: 1160px;
  min-width 320px
  box-sizing: border-box;
  margin 0 auto
  top: 6.5625rem;
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  grid-column-gap: 40px;
  @media(max-width 970px)
    grid-template: 1fr 1fr / 1fr 1fr 1fr 
    grid-row-gap: 40px;
    top: 3.5625rem;
  @media(max-width 759px)
    grid-template: 1fr 1fr 1fr /1fr 1fr
  @media(max-width 520px)
    grid-template: auto 1fr 1fr / 1fr 1fr
  @media(max-width 424px)
    grid-template: auto 1fr 1fr auto 1fr / 1fr
.footer__toxin
  position: relative
  @media(max-width 970px)
    grid-row: 1 / 3
  @media(max-width 759px)
    grid-row: 1 / 1
  @media(max-width 520px)
    grid-column: 1 / 3
  @media(max-width 424px)
    grid-column: 1 / 1
.footer__logo_color
  position: relative;
  top: -5px;
.footer__text
  width 16.25rem
  margin-top: 0.8125rem;
.footer__list
  h3
    margin-bottom 1.1875rem
  li
    margin 0.8125rem  0px 0px 
.footer__subscribe
  width 256px
  top 6.5rem
  h3
    margin-bottom 1.1875rem
  li
    margin 0.9375rem 0px 0px 0px
.footer__email
  margin-top: 1.375rem;
  margin-right: 1.25rem;
  width: 100%;
.footer__bot
  position relative
  border-top 1px solid gray
  height 4.375rem
  left 0px
  background #FFFFFF
  box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
.footer__bot-content
  position relative
  max-width 1200px
  height 4.375rem
  background #FFFFFF
  margin: 0 auto
  @media(max-width 500px)
    height 8rem
    display: flex;
    justify-content: center;
.footer__cc
  position absolute
  right 1.25rem
  margin-top 1.4375rem
  height 1.375rem
  width: 7rem
  display flex
  justify-content: space-between;
  ul
    display: flex;
    justify-content: space-between;
    width 100%
  @media(max-width 500px)
    left: 40%;
    top: 4.25rem
    margin 0
.footer__copyright
  position absolute
  margin-left 1.25rem
  margin-top 1.4375rem
.footer-elem
  position relative
  height: 127px;
  width: 380px;
  margin 120px auto 0
  display flex
  flex-direction column
  justify-content space-between
  align-items center
.footer-elem__Logo 
  flex-basis: 45%;
  width 105px
.footer-elem__toxin
  width 53.19px
  height 12.95px
.footer-elem__text
  width 560px
  height 48px
  text-align center
.footer-elem__cc
  height 22px
  width: 112px
  display: flex
  justify-content: space-between;
  ul
    display: flex;
    justify-content: space-between;
    width 100%