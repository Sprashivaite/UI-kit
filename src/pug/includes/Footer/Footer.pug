include ..\text-field\text-field

mixin footer
    footer.footer
        footer.footer__top
            .footer__toxin
                .footer__logo_color
                    +logo-color
                .footer__text 
                    span Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
            .footer__navigation
                h3 навигация
                p О нас
                p Новости
                p Служба поддержки
                p Услуги
            .footer__about
                h3 о нас
                p О сервисе
                p Наша команда
                p Вакансии
                p Инвесторы
            .footer__support
                h3 Служба поддержки
                p Соглашения
                p Сообщества
                p Связь с нами
            .footer__subscribe
                h3 Подписка
                p Получайте специальные предложения и новости сервиса
                .footer__email
                    +text-field({type: "email", text:"Email"})
    .footer__bot
        .footer__bot-content
            span.footer__copyright Copyright &copy; 2018 Toxin отель. Все права зачищены. 
            section.footer__cc
                img(src='/assets/img/1.jpg')
                img(src='/assets/img/2.jpg')
                img(src='/assets/img/3.jpg')
mixin footer_2
    .footer-elem
        .footer-elem__Logo
            +logo-color
        .footer-elem__text
            | Copyright © 2018 Toxin отель. Все права защищены.
        .footer-elem__cc
            img(src='/assets/img/1.jpg')
            img(src='/assets/img/2.jpg')
            img(src='/assets/img/3.jpg')