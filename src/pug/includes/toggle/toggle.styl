.toggle
    position relative
    height 20px
    width 110px
    margin-right 8px
    cursor pointer
    margin-top 13px
    &__label
        display inline
        position absolute
        width: 222px
        height: 12px;
        font-family: Montserrat;
        font-style: normal;
        font-weight: normal;
        font-size: 14px;
        color: rgba(31, 32, 65, 0.5);
        margin-top -3px
        margin-left 10px
        cursor pointer
    &__input
        appearance none
        background: #FFFFFF;
        border: 1px solid rgba(31, 32, 65, 0.25);
        box-sizing: border-box;
        border-radius: 10px;
        width: 40px;
        height: 20px;
        float left
        cursor pointer
        &:focus
            outline: none
        &:before
            content ''
            position absolute
            width: 12px;
            height: 12px;
            left: 4px
            top: 4px
            background: rgba(31, 32, 65, 0.25);
            border-radius: 10px;
            transition-duration: .3s;
        &:checked
            background: #FFFFFF;
            border: 1px solid #BC9CFF;
            box-sizing: border-box;
            border-radius: 10px;
            width: 40px;
            height: 20px;
            float left
            outline: none
            &:before
                content ''
                position absolute
                width: 12px;
                height: 12px;
                left: 24px
                top: 4px
                background: linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%);
                border-radius: 10px;
                transition-duration: .3s;