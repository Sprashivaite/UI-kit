.toggle
  position relative
  width 100%
  margin-right 8px
  cursor pointer
  margin-top 13px
  &__label
    display inline
    min-width: 222px
    margin-left 10px
    cursor pointer
  &__input
    appearance none
    background: #FFFFFF;
    border: 1px solid rgba(31, 32, 65, 0.25);
    box-sizing: border-box;
    border-radius: 10px;
    width: 40px;
    height: 20px;
    float left
    cursor pointer
    &:focus
      outline: none
    &:before
      content ''
      position absolute
      width: 12px;
      height: 12px;
      margin-left: 3px
      margin-top: 3px
      background: rgba(31, 32, 65, 0.25);
      border-radius: 10px;
      transition-duration: .3s;
    &:checked
      background: #FFFFFF;
      border: 1px solid #BC9CFF;
      box-sizing: border-box;
      border-radius: 10px;
      width: 40px;
      height: 20px;
      float left
      outline: none
      &:before
        content ''
        position absolute
        width: 12px;
        height: 12px;
        margin-left: 22px
        margin-top: 3px
        background: linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%);
        border-radius: 10px;
        transition-duration: .3s;