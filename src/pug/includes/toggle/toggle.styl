label.switch {  
  text-align: left;
  width: 38px;
  height: calc(38px / 2);
  border-radius:10px;    
//   border: 1px solid rgba(31, 32, 65, 0.25);
  background-color:#fff;
  display: inline-block;
  position: relative;
  cursor: pointer;
  border: 1px solid rgba(31, 32, 65, 0.25);
}

label.switch > span {
  display: block;
  width: 100%;
  height: 100%;
}

label.switch > input[type="checkbox"] {
  opacity: 0;
  position: absolute;
  
} 

label.switch > span:before, label.switch > span:after {
  content: "";
  cursor: pointer;
  position: absolute;
  
}

