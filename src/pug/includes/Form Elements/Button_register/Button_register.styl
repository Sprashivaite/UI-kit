.Button_register
    width 101px
    height 34px
    background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%)
    border-radius 22px
    border none
    &:active
        background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%)
        opacity 0.5
    &:focus
        outline none
    div
        position absolute
        width 62px
        height 15px
        left 19px
        top 9px
        font-family Montserrat
        font-style normal
        font-weight bold
        font-size 12px
        line-height 15px
        text-transform uppercase
        color #FFFFFF
        border-radius 0px