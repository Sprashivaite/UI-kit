.dropdown {
  display: flex;
  width: 266px;
  flex-direction: column;
  align-items: stretch;
  position: relative;
  &__dropbtn {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 44px;
    background: #FFFFFF;
    border: 1px solid #e2e2e2;
    border-radius: 2px;
    padding-left: 15px;
    outline: none
    p {
      font-size: 14px;
      color:grey;
    }
    i {
        color: #e2e2e2
    }
  }
}
.dropdown__dropbtn:hover
    position absolute
    border-radius: 2px;
    border: 1px solid $dark50;
    

.btnItems-container{
  position: absolute;
  background-color: white;
  width: 100%;
  top: 30px;
}
.minus, .plus {
  font-size: 18px;
  line-height: 22px;
  color: #e2e2e2;
  width: 30px;
  height: 30px;
  border: 1px solid #e2e2e2;
  border-radius: 22px;
  background: white;
  color: grey;
}

.dropdown-content {
  padding: 4px 8px 1px 14px;
  border: 1px solid grey;
  box-shadow: 0px 10px 20px rgba(31, 32, 65, 0.05);
  border-radius: 0 0 2px 2px;
   display: none;
  position: absolute;
  background-color: white;
  width: 242px;
  top: 43px;
  z-index: 1;
  &__show{
    display: block;
  }
  &__line {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 7px;
    width: 245px;

    p, input {
      font-family: Montserrat;
      font-style: normal;
      font-weight: bold;
      font-size: 12px;
      line-height: 15px;
      text-transform: uppercase;
      color: #1F2041;
    }

  }
  &__box-button {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;

    input {
      border: none;
      text-align: center;
      width: 33px;
      background-color: white;

    }

    .number {
      margin: 0 12px 0 12px;
    }
  }
}
.form-elements__btn-container {
  display: flex;
  justify-content: space-between;
  margin-top: 19px;

  .clear, .submit {
    border: none;
    text-transform: uppercase;
    background-color: transparent;
    font-family: 'Montserrat Bold';
    font-size: 12px;
  }

  .clear {
    color: grey;
    padding-left: 0px;
  }

  .submit {
    color: red;
    padding-right: 0px;
  }
}