.expandable-checkbox-list
  width: 100%;
  min-width 220px
  cursor pointer
  &__text
    min-width 222px
    display inline-block
  &__list
    display none
    transition: 0.6s
    width 220px
    background-color #fff
    z-index 5
    margin-top 15px
    li
      margin-top 5px
  &__button
    appearance: none;
    background-image: url(/assets/img/expand-more.svg);
    background-repeat: no-repeat;
    width: 12px;
    height: 12px;
    transition: .3s;
    outline: none;
    transform: rotate(180deg);
    float: right;
    margin-top: 8px;
    margin-right: 6%;
    &:checked
      transition: 0.3s
      transform: rotate(0deg)
      ~ .expandable-checkbox-list__list
        display block
        transition: 0.6s

