.expandable-checkbox-list
  position: relative;
  width: 100%;
  min-width 220px
  cursor pointer
  &__text
    width 222px
    display inline-block
  &__list
    display none
    transition: 0.6s
    li
      margin-top 10px
  &__button
    appearance: none;
    background-image: url(/assets/img/expand-more.svg);
    background-repeat: no-repeat;
    width: 12px;
    height: 12px;
    transition: .3s;
    outline: none;
    transform: rotate(0deg);
    float: right;
    margin-top: -24px;
    margin-right: 6%;
    &:checked
      transition: 0.3s
      transform: rotate(180deg)
      ~ .expandable-checkbox-list__list
        display block
        transition: 0.6s

