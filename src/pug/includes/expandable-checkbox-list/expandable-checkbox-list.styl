.expandable-checkbox-list
  position: relative;
  width: 100%;
  height: 100%;
  cursor pointer
  display flex
  justify-content: space-between
  align-items center
  &__text
    width 222px
  &__expand-more 
    display flex
    justify-content center
    align-items center
    width: 44px;
    height: 44px;
    transition: 0.3s
  &__list
    display none
    transition: 0.6s
    width: 266px;
    li
      margin-top 10px
.expandable-checkbox-list__button
  position absolute
  appearance none
.expandable-checkbox-list__button:checked + .expandable-checkbox-list__expand-more
  display flex
  justify-content center
  align-items center
  width: 44px;
  height: 44px;
  transition: 0.3s
  transform: rotate(180deg)
.expandable-checkbox-list__button:checked ~ .expandable-checkbox-list__list
  display block
  position absolute
  top: 46px;
  width: 266px;
  transition: 0.6s

