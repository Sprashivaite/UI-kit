.expandable-checkbox-list
    position: relative;
    width: 266px;
    height: 44px;
    cursor pointer
    display flex
    justify-content: space-between
    align-items center
    &__text
        width 222px
    &__expand-more 
        display flex
        justify-content center
        align-items center
        width: 44px;
        height: 44px;
        transform: rotate(180deg)
    &__list
        width: 266px;
        :first-child
            margin-top -10px
