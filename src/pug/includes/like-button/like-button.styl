.like-button
    position: absolute;
    width: 40px;
    height: 20px;
    background: linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%);
    // border: 1px solid rgba(31, 32, 65, 0.25);
    box-sizing: border-box;
    border-radius: 10px;
    cursor: pointer
    margin-top: 16px;
    margin-right: 10px;
    z-index 1
    &::before
        background: #ffffff;
        content: "";
        position: absolute;
        top: 1px;
        left: 1px;
        width: 38px;
        height: 18px;
        // background: #FFFFFF;
        // border: 1px solid rgba(31, 32, 65, 0.25);
        box-sizing: border-box;
        border-radius: 10px;
        z-index 2
    &_active
        position: absolute;
        width: 40px;
        height: 20px;
        background: #FFFFFF;
        border: 1px solid #BC9CFF;;
        box-sizing: border-box;
    &__input
        position: absolute
        display: none
        // &:checked + .like-button

    &__symbol
        background-image: url(/assets/img/favorite_border.svg);
        width: 10px;
        height: 8px;
        position: absolute;
        z-index: 2;
        margin-top: 5px;
        margin-left: 4px;
    &__value
        font-family: Montserrat;
        font-style: normal;
        font-weight: normal;
        font-size: 10px;
        line-height: 12px;
        text-align: center;
        color: rgba(31, 32, 65, 0.25);
        margin-left: 9px;
        margin-top: 3px;