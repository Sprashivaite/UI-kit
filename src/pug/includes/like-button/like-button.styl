.like-button-container
  width: 40px;
  height: 20px;
.like-button
  appearance none;
  outline: none;
  position relative
  float left
  width: 40px;
  height: 20px;
  background: rgba(31, 32, 65, 0.25);
  box-sizing: border-box;
  border-radius: 10px;
  cursor: pointer
  &::before
    background: #ffffff;
    content: '';
    position: absolute;
    top: 1px;
    left: 1px;
    width: 38px;
    height: 18px;
    box-sizing: border-box;
    border-radius: 10px;
  &::after
    content: ''
    background-image: url(/assets/img/favorite-border.svg);
    width: 10px;
    height: 8px;
    position: absolute;
    z-index: 2;
    margin-top: 6px;
    margin-left: 5px;
    &:checked
      background: linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%);
      &::after
        content: ''
        background-image: url(/assets/img/favorite.svg);
        width: 10px;
        height: 8px;
        position: absolute;
        z-index: 2;
        margin-top: 6px;
        margin-left: 5px;
  &__value
    position absolute
    font-size: 10px;
    color: rgba(31, 32, 65, 0.25);
    margin-left: 23px;
    margin-top: -2px;
    cursor pointer
    
