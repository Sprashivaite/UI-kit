.log-in
    position: relative
    width: 23.75rem
    height: 22.375rem
    background: #FFFFFF
    border: 1px solid rgba(0, 0, 0, 0.12)
    box-sizing: border-box
    box-shadow: 0px 0px 1.5625rem rgba(0, 0, 0, 0.2)
    border-radius: 4px
    &__title
        position: absolute
        // width: 20rem
        height: 3.75rem
        left: 1.875rem
        top: 2.5rem
        font-family: OpenSans, sans-serif
        font-style: normal
        font-weight: bold
        font-size: 1.5rem
        line-height: 1.875rem
        color: #1F2041
    &__name
        wrap 5.5rem, 1.875rem
    &__pass
        wrap 8.9375rem, 1.875rem
    &__button-solid
        wrap 13rem, 1.875rem
    &__text
        position: absolute
        width: 10.25rem
        height: 1.125rem
        left: 1.875rem
        top: 18.375rem
        font-family: Montserrat
        font-style: normal
        font-weight: normal
        font-size: 0.875rem
        line-height: 1.125rem
        display: flex
        align-items: center
        color: #000000
    &__button-empty
        wrap 17.5625rem, 15.625rem
