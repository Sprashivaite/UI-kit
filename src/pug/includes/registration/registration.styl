.registration
    position: absolute
    width: 23.75rem
    height: 40.375rem
    background: #FFFFFF
    border: 1px solid rgba(0, 0, 0, 0.12)
    box-sizing: border-box
    box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.2)
    border-radius: 4px
    &__title
        position: absolute
        width: 20rem
        height: 3.75rem
        left: 1.875rem
        top: 2.5rem
        font-family: Montserrat, sans-serif
        font-style: normal
        font-weight: bold
        font-size: 1.5rem
        line-height: 1.875rem
        color: #1F2041
    &__name
        wrap 5.5625rem, 1.8125rem
    &__surname
        wrap 8.9375rem, 1.8125rem
    &__radio
        wrap 12.375rem, 1.8125rem
    &__log-in
        position: relative;
        width: 20rem;
        height: 6.9375rem;
        left: 1.8125rem;
        top: 19.875rem
        display flex
        flex-direction: column
        justify-content: space-between
    &__toggle
        wrap 27.4375rem, 1.8125rem
.registration__log-in-email
    position absolute
    top 27px
.registration__log-in-pass
    position absolute
    top 5.0625rem
.registration__button-solid 
    wrap 31.125rem, 1.875rem
.registration__button-empty
    wrap 35.6875rem, 15.6875rem
.registration__data
    wrap 14.625rem, 1.8125rem
.registration__text
    wrap 36.25rem, 1.875rem
    font-size: 14px

