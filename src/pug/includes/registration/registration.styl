.registration
    position: absolute
    width: 380px
    height: 646px
    background: #FFFFFF
    border: 1px solid rgba(0, 0, 0, 0.12)
    box-sizing: border-box
    box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.2)
    border-radius: 4px
    &__title
        position: absolute
        width: 320px
        height: 60px
        left: 30px
        top: 40px
        font-family: OpenSans, sans-serif
        font-style: normal
        font-weight: bold
        font-size: 24px
        line-height: 30px
        color: #1F2041
    &__name
        wrap 89px, 29px
    &__surname
        wrap 143px, 29px
    &__radio
        wrap 198px, 29px
    &__log-in
        position: relative;
        width: 320px;
        height: 111px;
        left: 29px;
        top: 318px
        display flex
        flex-direction: column
        justify-content: space-between
    &__toggle
        wrap 439px, 29px
.registration__log-in-email
    position absolute
    top 27px
.registration__log-in-pass
    position absolute
    top 81px
.registration__button-solid 
    wrap 498px, 30px
.registration__button-empty
    wrap 571px, 251px
.registration__data
    wrap 234px, 29px
.registration__text
    wrap 580px, 30px
    font-size: 14px

