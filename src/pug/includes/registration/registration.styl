.registration
  position: relative
  min-width: 300px
  min-height: 646px
  background: #FFFFFF
  border: 1px solid rgba(0, 0, 0, 0.12)
  box-sizing: border-box
  box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.2)
  border-radius: 4px
  &__container
    width: 85%;
    margin-left: 7.6%;
    margin-top: 39px;
  &__title
    margin-top: 10px    
  &__name
    margin-top: 20px
  &__surname
    margin-top: 10px
  &__radio
    margin-top: 10px;
    width: 73.5%
  &__data
    margin-top: 20px
  &__log-in
    margin-top: 14px;
    .log-in__pass
      margin-top: 10px
  &__toggle
    margin-top: 10px
  &__button-solid 
    margin-top: 22px
    height 44px
  &__text
    margin-top: 40px   
    display inline-block
    width: 58% 
  &__button-empty    
    margin-top: 30px;
    width: 31%;
    display: inline-block;
    float: right;
    height 44px
