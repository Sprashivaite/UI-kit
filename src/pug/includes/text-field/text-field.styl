.text-field
  position relative
  min-width 100px
  
  height 44px
  &__border 
    outline-color: none;
    cursor: pointer;
    font-size: .875rem;
    color: rgba(31,32,65,.25);
    width: 100%;
    height: 100%;
    border-radius: 4px;
    border: 1px solid rgba(31,32,65,.25);
    padding-left: 14px;
    font-size 14px
    box-sizing: border-box
    &:hover, &:focus
      color rgba(31, 32, 65, 0.75)
      border: 1px solid rgba(31,32,65,.5);
      outline: none
    &::placeholder
      color rgba(31, 32, 65, 0.25)
  &__arrow
    position absolute
    background-image url('/assets/img/arrow-forward.svg')
    background-repeat: no-repeat
    width 20px
    height 20px
    right: 11.2px;
    top: 13px
    border: none
    outline-color: rgba(31,32,65,.25)
    background-color: white
  &__data
    @extends .text-field__arrow
    background-image url('/assets/img/expand-more.svg')
    transform: rotate(180deg)
    top: 7px
    right: 13px;
    outline none
  &__description
    position absolute
    top 0px
    right 0px
    font-weight normal
    color $dark50
    text-transform: uppercase;
    font-size: 12px;
 

