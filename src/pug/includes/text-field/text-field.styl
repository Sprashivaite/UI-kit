.text-field
  position relative
  min-width 100px  
  height 44px
  &__border
    width: 100%;
    height: 100%;
    padding-left: 14px;    
    box-sizing: border-box
    color: rgba(31,32,65,.25);
    border-radius: 4px;
    border: 1px solid rgba(31,32,65,.25);
    cursor: pointer;
    outline-color: none;
    &:hover, &:focus
      color rgba(31, 32, 65, 0.75)
      border: 1px solid rgba(31,32,65,.5);
      outline: none
    &::placeholder
      color rgba(31, 32, 65, 0.25)
  &__arrow
    position absolute
    background-image url('/assets/img/arrow-forward.svg')
    background-repeat: no-repeat
    width 20px
    height 20px
    right: 11.2px;
    top: 13px
    border: none
    outline-color: rgba(31,32,65,.25)
    background-color: white
  &__data
    @extends .text-field__arrow
    background-image url('/assets/img/expand-more.svg')
    transform: rotate(180deg)
    top: 7px
    right: 13px;
    outline none

