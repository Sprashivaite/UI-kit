.text-field
    position relative
    width 100%
    height 100%
    &__border
        position absolute
        width 318px
        height 42px
        background #FFFFFF
        border 1px solid rgba(31, 32, 65, 0.25)
        border-radius 4px
        &:hover
            border 1px solid rgba(31, 32, 65, 0.5)
            color rgba(31, 32, 65, 0.5)
        &:focus
            border 1px solid rgba(31, 32, 65, 0.5)
            color rgba(31, 32, 65, 0.5)
        &_arrow
            @extends .text-field__border
            width 260px
            &::after
                content ''
                position absolute
                background-image url('/assets/img/arrow_forward.svg')
                background-repeat: no-repeat
                width 20px
                height 20px
                right: 8px;
                top: 13px
                z-index 2
        &_data
            @extends .text-field__border_arrow
            &::after
                content ''
                background-image url('/assets/img/expand_more.svg')
                transform: rotate(180deg)
                top: 7px
                right: 13px;
                cursor pointer
    &__text
        position absolute
        outline-color: none
        width 300px
        height 24px
        left 14px
        top 7px
        color rgba(31, 32, 65, 0.25)
        border none
        cursor pointer
        &:hover
            color rgba(31, 32, 65, 0.75)
        &:focus
            color rgba(31, 32, 65, 0.75)
            outline: none
        &_arrow
            @extends .text-field__text
            width 220px