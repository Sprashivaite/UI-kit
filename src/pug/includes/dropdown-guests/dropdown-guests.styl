.iqdropdown {
    width: 320px 
    height: 42px
}

.iqdropdown:hover
    position absolute
    border: 1px solid $dark50;
    border-radius: 2px
.iqdropdown .iqdropdown-selection {
    font-family: Montserrat 
    font-style: normal 
    font-weight: normal 
    font-size: 14px 
    line-height: 18px 
    color: rgba(31, 32, 65, 0.75) 
    }
.iqdropdown-selection:after {
    content ''
    background-image url('/assets/img/expand_more.svg') !important
    background-size: contain !important
    width: 12px !important
    height: 8px !important
    }
.iqdropdown.menu-open .iqdropdown-selection:after {
    content ''
    background-image url('/assets/img/expand_more.svg') !important
    background-size: contain !important
    display flex
    justify-content center
    align-items center
    width: 44px 
    height: 44px 
    transition: 0.3s
    transform: rotate(180deg)
    margin-top: -2px;
    }
.iqdropdown .icon-decrement {

    color: rgba(31, 32, 65, 0.5) !important
    }

.iqdropdown-item 
    font-family: Montserrat !important
    font-size: 12px !important
    line-height: 15px !important
    text-transform: uppercase !important
    color: #1F2041 !important
    font-style: normal !important
    font-weight: bold !important
    width: 83px 
    height: 15px 
.iqdropdown .iqdropdown-menu-option
    height: 30px  !important
    margin: 5px 0 7px 0 !important
.iqdropdown .iqdropdown-menu
    border: 1px solid rgba(31, 32, 65, 0.5) 
    top: 42px 
    border-bottom-right-radius: 2px;
    border-bottom-left-radius: 2px;
    box-shadow: 0px 10px 20px rgba(31, 32, 65, 0.05) 
    height: 159px 
.iqdropdown .iqdropdown-item-controls .counter
    border none
    padding: 6px 12px
    font-family: Montserrat;
    font-style: normal;
    font-weight: bold;
    font-size: 12px;
    line-height: 15px;
    text-align: center;
    text-transform: uppercase;
    color: #1F2041;
.iqdropdown .iqdropdown-item-controls
    margin-left: 112px
    margin-top 17px
.iqdropdown button
    border-radius: 22px !important
    width: 30px !important
    height: 30px !important
    padding: 7px 0 0 0 !important
.iqdropdown .icon-decrement.icon-increment:before, .iqdropdown .icon-decrement:after
    content '';
    top 4px;
    left 5px
    background: rgba(31, 32, 65, 0.5);
    height 1px
    width 5px
.iqdropdown .icon-decrement.icon-increment:before, .iqdropdown .icon-increment:after
    height: 1px;
    width: 8px;
    top: 2.5px;
    left: 3px;
.iqdropdown.menu-open
    border: 1px solid rgba(31, 32, 65, 0.5);
    border-bottom-right-radius: 0px;
    border-bottom-left-radius: 0px;


.iqdropdown__apply
    position absolute
    right 7px
    top: 126px
    &:hover::before
        content ''
        position absolute
        margin-top -5px
        margin-left -14px
        background-color $dark5
        width: 105px
        height 35px
        border-radius: 2px
.iqdropdown__clear
    position absolute
    left 7px
    top: 126px
    &:hover::before
        content ''
        position absolute
        margin-top -5px
        margin-left -7px
        background-color $dark5
        width: 105px
        height 35px
        border-radius: 2px
    .button__text_empty
        color $dark50