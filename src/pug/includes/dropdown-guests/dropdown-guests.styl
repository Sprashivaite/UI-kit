
.iqdropdown {
  // width: 20rem 
  height: 2.75rem;
  border: 1px solid rgba(31, 32, 65, 0.25)
}

.iqdropdown:hover
  // position absolute
  border: 1px solid $dark50;
  border-radius: 2px
.iqdropdown .iqdropdown-selection {
  font-family: Montserrat 
  font-style: normal 
  font-weight: normal 
  font-size: 14px 
  line-height: 18px 
  color: rgba(31, 32, 65, 0.75) 
  }
.iqdropdown > .iqdropdown-selection:after {
  content ''
  background-image url('/assets/img/expand-more.svg') 
  background-size: contain 
  display flex
  justify-content center
  align-items center
  width: 12px 
  height: 12px 
  margin-top: -2px;  
  transform: rotate(180deg)
  transition: 0.3s
  }
.iqdropdown .icon-decrement {

  color: rgba(31, 32, 65, 0.5) 
  }

.iqdropdown-item 
  font-family: Montserrat 
  font-size: 12px 
  line-height: 15px 
  text-transform: uppercase 
  color: #1F2041 
  font-style: normal 
  font-weight: bold 
  width: 8.75rem
  height: 15px 
.iqdropdown .iqdropdown-menu-option
  height: 26px
  margin: 5px 0 7px 0 
.iqdropdown .iqdropdown-menu
  border: 1px solid rgba(31, 32, 65, 0.5) 
  top: 2.625rem 
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;
  box-shadow: 0px 10px 20px rgba(31, 32, 65, 0.05) 
  height: 159px 
.iqdropdown .iqdropdown-item-controls .counter
  border none
  padding: 0.375rem 0.75rem
  font-family: Montserrat;
  font-style: normal;
  font-weight: bold;
  font-size: 12px;
  line-height: 15px;
  text-align: center;
  text-transform: uppercase;
  color: #1F2041;
.iqdropdown .iqdropdown-item-controls
  right: 4%;
  position: absolute;
  margin-top 1.0625rem
  @media(max-width 1024px) {
    margin-left: 5rem
  }
  @media(max-width 767px) {
    margin-left: 3rem
  }
.iqdropdown .iqdropdown-item-controls button
  border-radius: 22px 
  width: 30px 
  height: 30px 
  padding: 7px 0 0 0 
.iqdropdown .icon-decrement.icon-increment:before, .iqdropdown .icon-decrement:after
  content '';
  top 4px;
  left 5px
  background: rgba(31, 32, 65, 0.5);
  height 1px
  width 5px
.iqdropdown .icon-decrement.icon-increment:before, .iqdropdown .icon-increment:after
  height: 1px;
  width: 8px;
  top: 2.5px;
  left: 3px;
.iqdropdown.menu-open
  border: 1px solid rgba(31, 32, 65, 0.5);
  border-bottom-right-radius: 0px;
  border-bottom-left-radius: 0px;
.iqdropdown.menu-open .iqdropdown-selection:after {
  content ''
  background-image url('/assets/img/expand-more.svg') 
  background-size: contain 
  display flex
  justify-content center
  align-items center
  width: 12px 
  height: 12px 
  margin-top: -2px;  
  transform: rotate(0deg)
  transition: 0.3s
  }

.iqdropdown__apply
  position absolute
  right 7px
  top: 126px
  &:hover::before
    content ''
    position absolute
    margin-top -5px
    margin-left -14px
    background-color $dark5
    width: 105px
    height 35px
    border-radius: 2px
.iqdropdown__clear
  position absolute
  left 7px
  top: 126px
  &:hover::before
    content ''
    position absolute
    margin-top -5px
    margin-left -7px
    background-color $dark5
    width: 105px
    height 35px
    border-radius: 2px
  .button__text_empty
    color $dark50
.iqdropdown .iqdropdown-menu-option
  display: inline-flex
  