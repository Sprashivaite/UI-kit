.room-card
  position: relative
  width: 100%
  min-width 150px
  min-height: 257px
  background: #FFFFFF
  box-shadow: 0px 10px 20px rgba(31, 32, 65, 0.05)
  border-radius: 4px
  figure
    margin 0
    padding 0
  &__picture_1
    height: 150px;
    width 100%
  &__picture_2,
  &__picture_3,
  &__picture_4,
  &__picture_5
    height: 150px;
    width 100%
    display none
  &__buttons
    position absolute
    display flex
    justify-content: space-between
    top 128px
    right 15px
    width: 41.25px;
    height: 10px;    
  &__button-circle
    height: 7.49px;
    width: 7.5px;
    border-radius: 50%;
    border: 1px solid #FFFFFF;
    box-sizing: border-box;
    filter: drop-shadow(0px 5px 5px rgba(31, 32, 65, 0.3));
    cursor pointer
  &__button-left
    display none
    position: absolute;
    width: 42px;
    height: 151px; 
    top 0
    background: linear-gradient(90deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0) 99.99%, rgba(255, 255, 255, 0) 100%);
    transition-property: display
    transition-delay: 6s
    transition-duration: 6s
    &:after
      content: '';
      position: absolute;
      background-image: url(/assets/img/room-card-arrow.svg);
      background-size: cover;
      width: 8px;
      height: 13px;
      top: 68px;
      left: 18px;
      transform: rotate(180deg);
  &__button-right
    display none
    position: absolute;
    top 0
    width: 42px;
    height: 151px; 
    right 0
    background: linear-gradient(90deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0) 99.99%, rgba(255, 255, 255, 0) 100%);
    transform: matrix(-1, 0, 0, 1, 0, 0);
    &:after
      content: '';
      position: absolute;
      background-image: url(/assets/img/room-card-arrow.svg);
      background-size: cover;
      width: 8px;
      height: 13px;
      top: 68px;
      left: 18px;
      transform: rotate(180deg);
  &__description
    position: relative;
    width: 85%;
    margin: 21px 20px 0;
    &:after
      content ''
      position absolute
      top: 31px;
      left 0
      width: 230px;
      height: 1px;
      border-bottom: 1px solid rgba(31, 32, 65, 0.1)
    .description__num
      color: #1F2041;
      display inline-block
      &:before
        content 'â„–'
        font-size: 14px
        font-weight bold
        margin-right: 5px
    .description__lux
      color: #BC9CFF
      display inline-block
    .description__cost
      display inline-block
      float right
      margin-top 3px
      >*
        color: rgba(31,32,65,.5);
      span
        font-size: 12px
.description__cost
    margin-top 0
.description__rating
  margin-top: 20px;
.description__reviews
  text-align: right
  color: rgba(31, 32, 65, 0.5)
