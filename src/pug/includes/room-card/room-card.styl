.room-card
    position: absolute
    width: 270px
    height: 257px
    background: #FFFFFF
    box-shadow: 0px 10px 20px rgba(31, 32, 65, 0.05)
    border-radius: 4px
    z-index 3
.description
    position: absolute;
    width: 245px;
    height: 67px;
    left: 20px;
    top: 173px
    &:after
        content ''
        position absolute
        top: 31px;
        left 0
        width: 230px;
        height: 1px;
        border-bottom: 1px solid rgba(31, 32, 65, 0.1)
.description__num
    display inline
    font-family: OpenSans
    font-style: normal
    font-weight: bold
    font-size: 18px
    line-height: 17px
    color: #1f2041
