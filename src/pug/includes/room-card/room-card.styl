

.room-card
    position: absolute
    width: 16.875rem
    height: 257px
    background: #FFFFFF
    box-shadow: 0px 10px 20px rgba(31, 32, 65, 0.05)
    border-radius: 4px
    z-index 3
        transition-delay: 6s
    transition-duration: 6s
    &__button-circle
        height: 7.49px;
        width: 7.5px;
        border-radius: 50%;
        border: 1px solid #FFFFFF;
        box-sizing: border-box;
        filter: drop-shadow(0px 5px 5px rgba(31, 32, 65, 0.3));
        cursor pointer
    &__buttons
        position absolute
        display flex
        justify-content: space-between
        top 128px
        right 15px
        width: 41.25px;
        height: 10px;
    &__picture_1
        height: 151.3759002685547px;
        // width: 270px;
.room-card__button-left
    display none
    position: absolute;
    width: 42px;
    height: 151px; 
    top 0
    background: linear-gradient(90deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0) 99.99%, rgba(255, 255, 255, 0) 100%);
    transition-property: display
    transition-delay: 6s
    transition-duration: 6s
    &:after
        content: "";
        position: absolute;
        background-image: url(/assets/img/room-card-arrow.svg);
        background-size: cover;
        width: 8px;
        height: 13px;
        top: 68px;
        left: 18px;
        transform: rotate(180deg);
.room-card__button-right
    display none
    position: absolute;
    top 0
    width: 42px;
    height: 151px; 
    right 0
    background: linear-gradient(90deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0) 99.99%, rgba(255, 255, 255, 0) 100%);
    transform: matrix(-1, 0, 0, 1, 0, 0);
    &:after
        content: "";
        position: absolute;
        background-image: url(/assets/img/room-card-arrow.svg);
        background-size: cover;
        width: 8px;
        height: 13px;
        top: 68px;
        left: 18px;
        transform: rotate(180deg);
