.header
    position relative
    width 1440px
    height 70px
    background #ffffff
    box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
    display inline-block
    &__logo_color
        wrap 15px, 140px 
    &__nav
        position absolute
        top: 14px
        left: 503px
        width 589px
        height 21px
        line-height 17px
        a
            margin 0px 28px 0px 0px
            float left
            text-decoration none
            color $dark50
            &:nth-of-type(4)
                margin-left 17px
    &__expand-more
        wrap 14px, 269px
        width 24px
        height 21px
    &__button-empty
        wrap 18px, 1100px
    &__button_register
        wrap 18px, 1199px

.header__nav_logged
    position absolute
    top: 14px
    left: 555px
    width 589px
    height 21px
    line-height 17px
    a
        margin 0px 28px 0px 0px
        float left
        text-decoration none
        color $dark50
        &:nth-of-type(4)
            margin-left 17px

