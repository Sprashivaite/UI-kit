.header_site
    position relative
    max-width 1200px
    height 70px
    background #ffffff
    margin 0 auto
    &__logo_color
        position absolute
        top 15px
        margin-left 20px
    &__nav
        position: absolute;
        top: 1.125rem;
        right: 0;
        margin-right: 1.375rem;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        &_logged
            position absolute
            top: 1.4375rem
            right: 0;
            @media(max-width 1023px)
              margin-right 80px
            a
                margin-left: 1.25rem
                text-decoration none
                @media(max-width 1023px)
                  display none
        @media(max-width 1023px)
            margin-right 80px
        a
            margin-left: 1.25rem
            float left
            text-decoration none
            @media(max-width 1023px)
                display none

    &__expand-more
        background-image url('/assets/img/expand_more.svg')
        display inline-block
        background-repeat no-repeat
        width 0.75rem
        height 1.3125rem
        margin -0.75rem 0.3125rem 0 0.5625rem!important
        transform: rotate(180deg)
        cursor pointer
    &__button_empty
        // position absolute
        left: 30.5rem;
        top: -0.25rem;
        margin 0 20px
        @media(max-width 1280px)
            left: 27rem;
        @media(max-width 600px)
            display none
    &__button_register
        // position absolute
        left 37.1875rem
        top: -0.25rem;
        @media(max-width 1280px)
            left 33rem
        @media(max-width 600px)
            display none
    &__name
        color: rgba(31, 32, 65, 0.5);
        white-space: pre
        overflow-x: hidden;
        margin-left: 40px;
        font-size: 14px;
        &:before
            content ''
            position absolute
            margin-left: -21px
            top: -0.25rem;
            height 1.875rem
            border-left 1px solid rgba(31, 32, 65, 0.1)
.header_site__burger
    display: none
    position: absolute
    right: 0
    z-index: 50
    @media(max-width 1023px)
        display: block
#menu__toggle {
  opacity: 0;
}

#menu__toggle:checked ~ .menu__btn > span {
  transform: rotate(45deg);
}
#menu__toggle:checked ~ .menu__btn > span::before {
  top: 0;
  transform: rotate(0);
}
#menu__toggle:checked ~ .menu__btn > span::after {
  top: 0;
  transform: rotate(90deg);
}
#menu__toggle:checked ~ .menu__box {
  visibility: visible;
  left: 0;
}

.menu__btn {
  display: flex;
  align-items: center;
  position: fixed;
  top: 20px;
  right : 20px;

  width: 26px;
  height: 26px;

  cursor: pointer;
  z-index: 1;
}

.menu__btn > span,
.menu__btn > span::before,
.menu__btn > span::after {
  display: block;
  position: absolute;

  width: 100%;
  height: 2px;

  background-color: $dark50;

  transition-duration: .25s;
}
.menu__btn > span::before {
  content: '';
  top: -8px;
}
.menu__btn > span::after {
  content: '';
  top: 8px;
}

.menu__box {
  display: block;
  position: fixed;
  visibility: hidden;
  top: 0;
  left: -100%;

  width: 300px;
  height: 100%;

  margin: 0;
  padding: 80px 0;

  list-style: none;

  background-color: $purple;
  box-shadow: 1px 0px 6px rgba(0, 0, 0, .2);

  transition-duration: .25s;
}

.menu__item {
  display: block;
  padding: 12px 24px;

  color: #333;

  font-family: Montserrat, sans-serif;
  font-size: 20px;
  font-weight: 600;

  text-decoration: none;

  transition-duration: .25s;
}
.menu__item:hover {
  background-color: #CFD8DC;
}