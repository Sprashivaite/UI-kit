.header
    position relative
    width 1440px
    height 70px
    background #ffffff
    box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
    &__logo_color
        position absolute
        top 15px
        left 9.7%
    &__nav
        position absolute
        top: 23px;
        left: 512px;
        b 
            a
                color: $dark75
        a
            margin-left: 30px
            float left
            text-decoration none
        &_logged
            position absolute
            top: 23px
            left: 564px
            b 
                a
                    color: $dark75
            a
                margin-left: 30px
                float left
                text-decoration none
    &__expand-more
        background-image url('/assets/img/expand_more.svg')
        display inline-block
        background-repeat no-repeat
        width 12px
        height 21px
        margin -3px -5px 0 4px!important
        transform: rotate(180deg)
    &__button_empty
        position absolute
        top 18px
        left 1100px
    &__button_register
        position absolute
        top 18px
        left 1199px
    &__name
        position absolute
        left 1189px
        top 24px
        width 240px
        height: 24px;
        color: rgba(31, 32, 65, 0.5);
        white-space: pre
        overflow-x: hidden;
        &:before
            content ''
            position absolute
            left: -32px;
            top: -4px;
            height 30px
            border-left 1px solid rgba(31, 32, 65, 0.1)

.header_site
    position relative
    max-width 1200px
    height 4.375rem
    background #ffffff
    margin 0 auto
    &__logo_color
        position absolute
        top 0.9375rem
        margin-left 20px
    &__nav
        position: absolute;
        top: 1.4375rem;
        right: 0%;
        margin-right: 1.25rem;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        // @media(max-width 1280px)
        //     right: 300px;
        a
            margin-left: 1.25rem
            float left
            text-decoration none
        &_logged_site
            position absolute
            top: 1.4375rem
            left: 35.25rem
            a
                margin-left: 1.25rem
                float left
                text-decoration none
    &__expand-more
        background-image url('/assets/img/expand_more.svg')
        display inline-block
        background-repeat no-repeat
        width 0.75rem
        height 1.3125rem
        margin -0.1875rem 0.3125rem 0 0.5625rem!important
        transform: rotate(180deg)
    &__button_empty
        // position absolute
        left: 30.5rem;
        top: -0.25rem;
        margin 0 20px
        @media(max-width 1280px)
            left: 27rem;
    &__button_register
        // position absolute
        left 37.1875rem
        top: -0.25rem;
        @media(max-width 1280px)
            left 33rem
    &__name
        position absolute
        left 74.3125rem
        top 1.5rem
        width 15rem
        height: 1.5rem;
        color: rgba(31, 32, 65, 0.5);
        white-space: pre
        overflow-x: hidden;
        &:before
            content ''
            position absolute
            left: -2rem;
            top: -0.25rem;
            height 1.875rem
            border-left 1px solid rgba(31, 32, 65, 0.1)