include ..\logo-color\logo-color
include ..\button\button

mixin a(name)
    li
        a(href="change-me.html")= name
mixin header(options ={})
    header
        .header
            .header__logo_color
                +logo-color
            nav(class = (options.login ? "header__nav_logged" : "header__nav") )
                ul
                    if (options.bold) 
                        b 
                            +a("О нас")
                    if (!options.bold)
                        +a("О нас")
                    +a("Услуги")            
                    a.header__expand-more
                    +a("Вакансии")
                    +a("Новости")
                    +a("Соглашения")
                    a.header__expand-more
                if options.login == true
                    span.header__name Юлий Цезарь
                else if options.login == false
                    .header__button_empty
                        +button-header({text: "войти", type:"_empty"})
                    .header__button_register
                        +button-header({text: "зарегистрироваться"})
            aside.header__burger
                .hamburger-menu
                    input#menu__toggle(type="checkbox")
                    label.menu__btn(for="menu__toggle")
                        span
                    ul.menu__box
                        li
                        a.menu__item(href="change-me.html") О нас
                        li
                        a.menu__item(href="change-me.html") Услуги
                        li
                        a.menu__item(href="change-me.html") Вакансии
                        li
                        a.menu__item(href="change-me.html") Новости
                        li
                        a.menu__item(href="change-me.html") Соглашения
                        li
                        a.menu__item(href="change-me.html") Войти
                        li
                        a.menu__item(href="change-me.html") Зарегистрироваться