mixin dropdown-facilities
    .dropdown-facilities.js-dropdown-facilities
        .dropdown__dropbtn.js-dropdown__dropbtn
            .dropbtn__text 2 спальни, 2 кровати
            i.material-icons expand_more
        .dropdown-content.js-dropdown-content
            .dropdown-content__line
                p спальни
                .dropdown-content__box-button.js-dropdown-content__box-button
                    button.minus.js-minus -
                    input.bedrooms(type="text", value="2", disabled="", size="1")
                    button.plus.js-plus +
            .dropdown-content__line
                p кровати
                .dropdown-content__box-button.js-dropdown-content__box-button
                    button.minus.js-minus -
                    input.bed(type="text", value="2", disabled="", size="1")
                    button.plus.js-plus +
            .dropdown-content__line
                p ванные комнаты
                .dropdown-content__box-button.js-dropdown-content__box-button
                    button.minus.js-minus -
                    input.bathrooms(type="text", value="0", disabled="", size="1")
                    button.plus.js-plus +
