.header
  width 100%
  min-height 70px
  display flex
  align-items center
  justify-content space-between
  background #fff
  max-width 1160px

  &::after
    content ''
    box-shadow 0 10px 20px $dark5
    height 70px
    width 100%
    position absolute
    left 0
    pointer-events none
 
  &__nav
    display flex
    align-items center
   
    @media (max-width 999px)
      margin-right 30px
 
  &__button-empty 
    @media (max-width 540px)
      display none

  &__button-register
    margin-left 19px
 
    @media (max-width 540px)
      display none
 
  &__name
    display inline-flex
    align-items center
    color $dark50
    white-space pre
    overflow hidden
  
    &::before
      content ''
      display inline-block
      margin-right 20px
      height 30px
      width 1px
      background-color rgba(31, 32, 65, 0.1)
