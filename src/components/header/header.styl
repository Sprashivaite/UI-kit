header
  box-shadow 0px 5px 20px rgba(31, 32, 65, 0.05)
.header
  width 100%
  min-width 280px
  min-height 70px
  display flex
  align-items center
  justify-content space-between
  background #ffffff
  &__nav
    display flex
    align-items center    
    @media(max-width 999px)
      margin-right 30px
    &-item
      padding-right 20px
      text-decoration none
      &:focus
        outline none
        border 1px solid $dark25
        border-radius 10%
      &:hover
        color $dark75
      &_dropdown
        padding-right 44px
        position relative
        &:hover 
          .header__nav-dropdown-content
            display block
        &:after
          position absolute
          content: "expand_more"
          font-family 'Material Icons'
          display inline-block  
          font-size 24px
          width 12px
          height 16px 
          cursor pointer
          color rgba(31, 32, 65, 0.5)
      &_bold
        font-weight bold      
    &-dropdown-content 
      border 1px solid $dark50
      position absolute     
      display none
      min-width 100%
      background-color white
      min-width 80px
      top 18px
      z-index 1
      .header__nav-item
        padding 5px 20px
        margin 0
        &:hover
          color $dark100
  &__ul
    display flex  
    @media(max-width 999px)
      display none      
  &__button_empty
    height 34px
    width 87px
    @media(max-width 540px)
      display none
  &__button_register
    margin-left 19px
    width 12.25rem
    @media(max-width 540px)
      display none
  &__name
    display inline-flex
    align-items center
    color rgba(31,32,65,.5)
    white-space pre
    overflow hidden
    &:before
      content ''
      display inline-block
      margin-right 20px
      height 30px
      width 1px
      background-color rgba(31, 32, 65, 0.1)
