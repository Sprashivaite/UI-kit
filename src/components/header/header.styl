header
  box-shadow 0px 5px 20px rgba(31, 32, 65, 0.05)
.header
  position relative
  width 100%
  min-width 280px
  min-height 70px
  display flex
  align-items center
  justify-content space-between
  background #ffffff
  &__nav
    display inline-flex
    align-items center    
    @media(max-width 999px)
      margin-right 30px
    ul
      display flex
      margin-top 6px    
      @media(max-width 999px)
        display none
    a
      margin-left 20px
      text-decoration none
      &:focus
        outline none
        border 1px solid $dark25
        border-radius 10%
      &:hover
        color $dark75
  &__expand-more
    font-family 'Material Icons'
    display inline-block  
    font-size 24px
    width 12px
    height 16px 
    cursor pointer
    padding-right 26px
    color rgba(31, 32, 65, 0.5)
  &__button_empty
    height 34px
    width 87px    
    margin-left 20px
    @media(max-width 500px)
      display none
  &__button_register
    margin-left 19px
    width 12.25rem
    @media(max-width 500px)
      display none
  &__name
    display inline-flex
    align-items center 
    margin-left 20px       
    color rgba(31,32,65,.5)
    white-space pre
    overflow hidden
    &:before
      content ''
      display inline-block
      margin-right 20px
      height 30px
      width 1px
      background-color rgba(31, 32, 65, 0.1)      
.header__burger
  display none
  position fixed
  z-index 10
  @media(max-width 1000px)
    display block
.burger
  &__toggle 
    opacity 0
    &:checked 
      ~ .burger__btn 
        span
          transform rotate(45deg) 
          &::before 
            top 0
            transform rotate(0deg)
          &::after 
            top 0
            transform rotate(90deg)
      ~ .burger__menu 
        visibility visible
        left 0
  &__btn 
    display flex
    align-items center
    position fixed
    top 20px
    right  20px
    width 26px
    height 26px
    cursor pointer
    z-index 1
    > span,
    > span::before,
    > span::after 
      display block
      position absolute
      width 100%
      height 2px
      background-color $dark50
      transition-duration .25s
    > span::before 
      content ''
      top -8px
    > span::after 
      content ''
      top 8px
  &__menu 
    display block
    position fixed
    visibility hidden
    top 0
    left -100%
    width 100%
    height 100%
    margin 0
    padding 80px 0
    background-color #6FCF97
    transition-duration .25s
    .menu__item 
      display block
      padding 12px 24px
      color #333
      font-family Montserrat, Arial, sans-serif
      font-size 20px
      font-weight 600
      transition-duration .25s
      &:hover 
        background-color #CFD8DC
