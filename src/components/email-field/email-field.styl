.email-field
  position relative
  &__button
    position absolute 
    right 9px 
    top 10px 
    border none
    outline-color rgba(31,32,65,.25)
    background-color transparent
    width 24px
    height 24px 
    &:after
      content 'arrow_forward'
      position absolute 
      font-family 'Material Icons' 
      font-size 24px  
      color #BC9CFF
      cursor pointer 
      top 0
      left 0
      opacity 1
      transition 0.3s
    &:hover
      opacity 0.5