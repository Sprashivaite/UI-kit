.email-field
  position relative
  min-width 100px
  width 100%
  height 44px
  box-sizing border-box

  &__border
    border 1px solid $dark25
    border-radius 4px
    width 100%
    height 100%
    position absolute
    top 0
    left 0
 
    &:hover
    &:focus
      border 1px solid $dark50
 
  &__input
    width 84%
    padding 12px 0 0 14px
    outline-color none
    border none
    color $dark75
    background-color transparent
    transition 0.3s
    z-index 1
    position relative
  
    &:hover
    &:focus
      color $dark75
      outline none
    
      ~ .email-field__border
        border 1px solid $dark50
 
    &::placeholder
      color $dark25
 
  &__button
    position absolute
    right 1px
    top 8px
    border none
    outline-color $dark25
    background-color white
    width 40px
    height 24px
    cursor pointer
    z-index 1
 
    &::after
      content 'arrow_forward'
      position absolute
      font-family 'Material Icons'
      font-size 24px
      color $purple
      top 0
      right 8px
      opacity 1
      transition 0.3s
  
    &:hover
    &:focus
      opacity 0.5
      outline none
  
      ~ .email-field__border
        border 1px solid $dark50
