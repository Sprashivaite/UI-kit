.email-field
  position relative
  min-width 100px
  width 100%
  height 44px
  border 1px solid $dark25
  box-sizing border-box
  border-radius 4px
  &__input
    width 84%
    padding 12px 0 0 14px
    outline-color none
    border none
    color $dark75
    background-color transparent
    transition 0.3s
    &:hover
    &:focus
      color $dark75
      outline none
    &::placeholder
      color $dark25
  &__button
    position absolute
    right 1px
    top 8px
    border none
    outline-color $dark25
    background-color white
    width 40px
    height 24px
    cursor pointer
    &::after
      content 'arrow_forward'
      position absolute
      font-family 'Material Icons'
      font-size 24px
      color $purple
      top 0
      right 8px
      opacity 1
      transition 0.3s
    &:hover
      opacity 0.5
