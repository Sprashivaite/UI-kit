.text-field
  position relative
  min-width 100px  
  width 100% 
  height 44px
  border 1px solid rgba(31,32,65,.25) 
  box-sizing border-box  
  border-radius 4px 
  &:hover
    border 1px solid rgba(31,32,65,.5)
  &__input
    width 100% 
    height 100% 
    padding-left 14px      
    outline-color none 
    border none
    color rgba(31,32,65,.75) 
    background-color transparent
    transition 0.3s
    &:hover, &:focus 
      color rgba(31, 32, 65, 0.75)
      outline none
    &::placeholder
      color rgba(31, 32, 65, 0.25) 
