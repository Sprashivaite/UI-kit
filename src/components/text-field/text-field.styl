.text-field
  position relative
  min-width 100px  
  height 44px
  &__border
    width 100% 
    height 100% 
    padding-left 14px     
    box-sizing border-box
    color rgba(31,32,65,.25) 
    border-radius 4px 
    border 1px solid rgba(31,32,65,.25) 
    cursor pointer 
    outline-color none 
    &:hover, &:focus
      color rgba(31, 32, 65, 0.75)
      border 1px solid rgba(31,32,65,.5) 
      outline none
    &::placeholder
      color rgba(31, 32, 65, 0.25)
  &__arrow
    position absolute 
    font-family 'Material Icons' 
    font-size 24px
    top 8px 
    right 5px 
    border none
    color #BC9CFF
    outline-color rgba(31,32,65,.25)
    background-color transparent
  &__data 
    position absolute
    font-family 'Material Icons'
    font-size 24px
    top 8px 
    right 5px 
    outline none
    border none
    color rgba(31,32,65,.5)
    outline-color rgba(31,32,65,.25)
    background-color transparent
