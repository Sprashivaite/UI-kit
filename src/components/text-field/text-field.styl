.text-field
  position relative
  min-width 100px
  width 100%
  height 44px
  box-sizing border-box

  &__border
    border 1px solid $dark25
    border-radius 4px
    width 100%
    height 100%
    position absolute
    top 0
    left 0
 
    &:hover
    &:focus
      border 1px solid $dark50
 
  &__input
    position relative
    width 100%
    height 100%
    padding-left 14px
    border none
    color $dark75
    background-color transparent
    transition 0.3s
    z-index 1
  
    &:hover
    &:focus
      color $dark75
      outline none

      ~ .text-field__border
        border 1px solid $dark50
  
    &::placeholder
      color $dark25
