mixin button({background = "", text = "", hasArrow = false, isHeader = false} = {})
    -
        const transparent = (background === "transparent" ? "button_color_transparent": "");
        const buttonArrow = (hasArrow ? "button_with-arrow": "");
        const textArrow = (hasArrow ? "button__text_with-arrow": "");
        const textColor = (background === "transparent" ? "button__text_color_solid": "");
        const buttonHeader = (isHeader ? "button_is-header": "");
        const textHeader = (isHeader ? "button__text_is-header": "");
                
    button.button(class=`${transparent} ${buttonArrow} ${buttonHeader}`)
        div.button__text(class=`${textColor} ${textArrow} ${textHeader}`)= text 