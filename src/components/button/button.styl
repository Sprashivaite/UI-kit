.button
  position relative
  width 100%
  min-width 87px
  max-width 400px
  height 100%
  min-height 35px
  max-height 44px
  background linear-gradient(180deg, $purple 0%, $blue 100%)
  border-radius 22px
  border none
  display flex
  align-items center
  justify-content center
  cursor pointer
  &:focus, &:hover
    background linear-gradient(180deg, rgba(188, 156, 255, 0.5) 0%, rgba(139, 164, 249, 0.5) 100%)
    outline none 
    transition 0.3s
  &__text
    font-weight bold
    font-size 12px
    text-transform uppercase
    color #FFFFFF
    &_color_solid
      color $purple
      z-index 3
  &_with-arrow
    &:after
      content 'arrow_forward'
      font-family 'Material Icons'
      font-size 24px
      right 10px
      z-index 2
      color #fff
      position absolute
  &_color_transparent
    &:after
      content ''
      position absolute
      right 2px
      bottom 2px
      left 2px
      top 2px
      background-color white
      border-radius 22px
      z-index 2
    &:active
      border-radius 22px
      background linear-gradient(180deg, #deceff 0%, #c5d2fc 100%)
      border none
      z-index 1 
