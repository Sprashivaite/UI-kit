.button
  position relative
  width 100%
  min-width 87px
  height 100%
  min-height 35px
  background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%)
  border-radius 22px
  border none
  display flex
  align-items center
  justify-content center
  cursor pointer
  &:active, &:focus, &:hover
    background linear-gradient(180deg, rgba(188, 156, 255, 0.5) 0%, rgba(139, 164, 249, 0.5) 100%)
    outline none 
    transition 0.3s
  &:active
    .button__text, .button__text_empty
      color $dark50
  &__text
    font-weight bold
    font-size 0.75rem
    text-transform uppercase
    color #FFFFFF
    &_empty
      @extend .button__text
      color $purple
      z-index 3
      &:active
        color $dark50
  &_long
    @extend .button
    &:after
      content 'arrow_forward'
      font-family 'Material Icons'
      font-size 24px
      right 10px
      z-index 2
      color #fff
      position absolute
  &_empty
    @extend .button
    &::after
      content ''
      position absolute
      right 2px
      bottom 2px
      left 2px
      top 2px
      background-color white
      border-radius 22px
      z-index 2
    &:active
      border-radius 22px
      background linear-gradient(180deg, #deceff 0%, #c5d2fc 100%)
      border none
      z-index 1 
