.date-filter
  position relative
  min-width 100px
  width 100%
  height 44px
  box-sizing border-box

  &::after
    content 'expand_more'
    position absolute
    font-family 'Material Icons'
    font-size 24px
    top 11px
    right 8px
    color $dark50
    outline-color $dark25
    background-color transparent
    cursor pointer
    pointer-events none

  &__input
    width 100%
    height 100%
    padding-left 14px
    outline-color none
    color $dark75
    background-color transparent
    cursor pointer
    border 1px solid $dark25
    border-radius 4px

    &:hover
    &:focus
      color $dark75
      outline none
      border 1px solid $dark50

    &::placeholder
      color $dark75
