.reservation
  position relative
  min-width 280px
  background #FFFFFF
  border 1px solid rgba(0, 0, 0, 0.12)
  box-sizing border-box
  box-shadow 0px 0px 25px rgba(0, 0, 0, 0.2)
  border-radius 4px
  &__container
    width 85%
    margin 39px auto
    @media(max-width 400px)
      width 91%
  &__description
    width 100%
    .description__num
      color #1F2041 
      display inline-block
      &:before
        content 'â„–'
        font-size 14px
        font-weight bold
        margin-right 5px
    .description__lux
      color #BC9CFF
      display inline-block
    .description__cost
      display inline-block
      float right
      margin-top 8px
      >*
        color rgba(31,32,65,.5) 
      span
        font-size 12px
  &__com-data
    width 100%
    margin-top 10px 
  &__guests
    width 100%
    margin-top 16px 
  &__count
    width 100%
    margin-top 16px
    .count__text
      width 67%
      display inline-block
      p
        margin-bottom 12px   
    .count__cost
      float right
      text-align right
      p
        margin-bottom 10px    
    .count__inf
      position relative
      &:after
        content 'i' 
        font-weight 700 
        right -25px 
        top 0
        font-size 12px 
        color rgba(31,32,65,.25) 
        position absolute 
        border 1px solid rgba(31, 32, 65, 0.25)
        border-radius 25px
        text-align center
        line-height 20px 
        width 20px
        height 20px
        cursor pointer
  &__final
    display flex
    align-items baseline
    flex-wrap nowrap
    width 100%
    margin-top 12px 
    .final__line
      flex-grow 1
      height 1px
      bottom 5px 
      border-bottom 1px dotted rgba(31, 32, 65, 0.25)
      margin 0 4px
  &__button-solid
    margin-top 20px
    width 100%
    height 44px
    margin-bottom 30px




