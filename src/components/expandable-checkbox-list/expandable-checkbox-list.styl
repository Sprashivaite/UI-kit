.expandable-checkbox-list
  width 100%
  min-width 220px
  cursor pointer
  &__text
    width 100%
    display inline-block
    &:after
      content 'expand_more' 
      font-family 'Material Icons'
      font-size 24px
      color rgba(31, 32, 65, 0.5)
      transition 0.3s
      transform rotate(0deg) 
      vertical-align middle 
      text-transform none
      font-weight normal
      float right
  &__list
    display none
    transition 0.6s
    width 220px
    background-color #fff
    z-index 5
    margin-top 15px
    li
      margin-top 4px
  &__input
    visually-hidden()
    &:checked
      ~ .expandable-checkbox-list__text:after
        transition 0.3s
        transform rotate(180deg)
      ~ .expandable-checkbox-list__list
        display block
        transition 1s

