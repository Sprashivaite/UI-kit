.expandable-checkbox-list
  width 100%
  cursor pointer
 
  &__title
    width 100%
    display inline-block
    font-weight 700
    font-size 12px
    text-transform uppercase
    color $dark-100
   
    &::after
      content 'expand_more'
      font-family 'Material Icons'
      font-size 24px
      color $dark50
      transition 0.3s
      transform rotate(0deg)
      vertical-align middle
      text-transform none
      font-weight normal
      float right

  &__checkboxes
    display none
    transition 0.6s
    width 100%
    background-color #fff
    z-index 5
    padding-top 14px

  &__checkboxes_is-opened
    display block
    animation-name opacity
    animation-duration 0.6s
 
  &__li
    margin-bottom 10px

  &_is-opened
    .expandable-checkbox-list__title::after
      transition 0.3s
      transform rotate(180deg)
   

 
@keyframes opacity
  0%
    opacity 0
 
  100%
    opacity 1
