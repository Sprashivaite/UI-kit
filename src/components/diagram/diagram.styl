.diagram
  min-width 200px
  display flex
  width 100%
  justify-content space-between
  flex-wrap wrap
  &__circle-container
    margin-top 20px
    height 120px
    position relative
    width 120px
  &__circle-num
    position absolute
    z-index 4
    color $purple
    font-weight bold
    font-size 24px
    line-height 21px
    width 107px
    display flex
    flex-direction column
    align-items center
    text-align center
    top 36px
    left 5px
  &__circle-vote
    font-size 12px
  &__rating-container
    margin-top 50px
    position relative
    padding-left 10px
    margin-left 6px
  &__rating
    &::before
      content ''
      position absolute
      background $dark75
      width 10px
      height 10px
      border-radius 50%
      left -4px
      margin-top 6px
    &_color_orange
      &::before
        background linear-gradient(180deg, $lightOrange 0%, $orange 100%)
    &_color_green
      &::before
        background linear-gradient(180deg, $green 0%, $turquoise 100%)
    &_color_purple
      &::before
        background linear-gradient(180deg, $purple 0%, $blue 100%)
    &_color_black
      &::before
        background linear-gradient(180deg, $grey 0%, $darkBlue 100%)
