.diagram
  min-width 200px
  display flex
  width 100%
  justify-content space-between
  flex-wrap: wrap
  .diagram__circle
    margin-top 22px
    height 120px
    position relative
    width 120px 
    .circle__back
        position absolute
        top 4px 
        left 4px 
        z-index 3 
        width 113px 
        height 112px 
        background white 
        border-radius 50%
    .circle__part-left
      position absolute
      z-index 2
      width 120px 
      height 120px 
      clip rect(0,60px,121px,0px) 
      background-image linear-gradient(180deg, #FFE39C 0%, #FFBA9C 100%) 
      border-radius 50%
    .circle__part-right-top
      position absolute
      left 1px 
      width 120px 
      height 120px 
      clip rect(0,121px,60px,60px) 
      background #C4C4C4  
      border-radius 50% 
    .circle__part-right-bot
      position absolute
      left 1px  
      top 0px 
      width 120px 
      height 120px 
      clip rect(61px,121px,121px,60px)
      background-image linear-gradient(180deg, #6FCF97 0%, #66D2EA 100%)
      border-radius 50% 
    .circle__text
      position absolute
      z-index 4
      color #BC9CFF 
      font-weight bold 
      font-size 24px 
      line-height 21px 
      width 107px 
      display flex
      flex-direction column
      align-items center 
      text-align center 
      top 36px 
      left 5px 
      span 
        font-size 12px 
  .diagram__rating
    margin-top 50px 
    position relative
    padding-left 10px
    .rating_well
      &:before
        content ''
        position absolute
        background linear-gradient(180deg, #FFE39C 0%, #FFBA9C 100%) 
        width 10px 
        height 10px 
        border-radius 50%
        left -4px 
        margin-top 6px 
    .rating_good
      &:before
        @extends .rating_well:before
        background linear-gradient(180deg, #6FCF97 0%, #66D2EA 100%) 
    .rating_satisfactorily
      &:before
        @extends .rating_well:before
        background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%) 
    .rating_disappointed
      &:before
        @extends .rating_well:before
        background linear-gradient(180deg, #919191 0%, #3D4975 100%) 