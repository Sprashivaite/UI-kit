.search-rooms
  position relative
  min-width 200px
  min-height 374px
  height 100%
  background #fff
  border 1px solid rgba(0, 0, 0, 0.12)
  box-sizing border-box
  box-shadow 0 0 25px rgba(0, 0, 0, 0.2)
  border-radius 4px
 
  &__container
    margin 39px auto 0
    width 85%
    padding-bottom 30px
  
    @media (max-width 400px)
      width 91%
 
  &__com-data
    margin-top 13px
 
  &__guests
    margin-top 17px
 
  &__button
    margin-top 30px
    height 44px
