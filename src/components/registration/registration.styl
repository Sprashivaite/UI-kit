.registration
  position relative
  min-width 300px
  min-height 646px
  background #FFFFFF
  border 1px solid rgba(0, 0, 0, 0.12)
  box-sizing border-box
  box-shadow 0px 0px 25px rgba(0, 0, 0, 0.2)
  border-radius 4px
  &__container
    width 85% 
    margin 39px auto 0
    @media(max-width 400px)
      width 91%
  &__title
    margin-top 10px
    @media(max-width 768px)
      text-align center
  &__name
    margin-top 20px
  &__surname
    margin-top 10px
  &__radio
    margin-top 10px
  &__data
    margin-top 15px
  &__log-in
    margin-top 15px 
    .log-in__pass
      margin-top 10px
  &__toggle 
    margin-top 10px
    white-space nowrap
  &__button-solid 
    margin-top 18px
    height 44px
  &__sign-in-form
    padding-bottom 20px
  &__text
    margin 40px 0 20px
    display inline-block
    text-align center 
  &__button-empty    
    margin-top 30px 
    width 31% 
    display inline-block 
    float right 
    height 44px
