include ../text-field/text-field
include ../radio-button/radio-button
include ../toggle/toggle
include ../button/button
include ../date-range/date-range
mixin registration(options = {})
    -
        const {
            title = "",             
            data = "",             
            actionForm = "room-details.html",
            textName = "",
            textSurName = "",
            radioMan = {},
            radioWoman = {},
            dateText = "", 
            textEmail = {},
            textPassword = {},
            toggleName = "", 
            buttonPay = {},
            accountText = "", 
            buttonLogIn = {}
        } = options
    .registration
        .registration__container
            h1.registration__title= title
            form(action=actionForm, method = "post")
                .registration__name
                    +text-field({placeholder: textName})
                .registration__surname
                    +text-field({placeholder: textSurName})
                .registration__radio-buttons
                    .registration__radio-button
                        +radio-button(radioMan)
                    .registration__radio-button
                        +radio-button(radioWoman)
                .registration__data
                    legend= dateText
                    +text-field({masked: true, placeholder: "ДД.ММ.ГГГГ", date: true})
                .registration__log-in
                    legend= data
                    .registration__log-in-email
                        +text-field(textEmail)
                    .registration__log-in-pass
                        +text-field(textPassword)
                .registration__toggle
                    +toggle({text: toggleName})
                .registration__button-solid
                    +button(buttonPay)
            .registration__sign-in
                .registration__text= accountText
                .registration__button-empty                
                    +button(buttonLogIn)