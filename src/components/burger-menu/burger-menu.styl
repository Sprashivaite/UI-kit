.burger-menu
  display none
  position fixed
  z-index 10
  @media(max-width 1000px)
    display block
  &__toggle 
    opacity 0
    &:checked 
      ~ .burger-menu__btn 
        span
          transform rotate(45deg) 
          &::before 
            top 0
            transform rotate(0deg)
          &::after 
            top 0
            transform rotate(90deg)
      ~ .burger-menu__menu 
        visibility visible
        left 0
  &__btn 
    display flex
    align-items center
    position fixed
    top 20px
    right  20px
    width 26px
    height 26px
    cursor pointer
    z-index 1
    > span,
    > span::before,
    > span::after 
      display block
      position absolute
      width 100%
      height 2px
      background-color $dark50
      transition-duration .25s
    > span::before 
      content ''
      top -8px
    > span::after 
      content ''
      top 8px
  &__menu 
    display block
    position fixed
    visibility hidden
    top 0
    left -100%
    width 100%
    height 100%
    margin 0
    padding 80px 0
    background-color #6FCF97
    transition-duration .25s
    .burger-menu__item 
      display block
      padding 12px 24px
      color #333
      font-family Montserrat, Arial, sans-serif
      font-size 20px
      font-weight 600
      transition-duration .25s
      &:hover 
        background-color #CFD8DC
