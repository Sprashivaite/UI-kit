.burger-menu
  display none
  position fixed
  z-index 10

  @media (max-width 1000px)
    display block

  &__toggle
    opacity 0

    &:checked
      ~ .burger-menu__button
        .burger-menu__stripes
          transform rotate(45deg)

          &::before
            top 0
            transform rotate(0deg)

          &::after
            top 0
            transform rotate(90deg)

      ~ .burger-menu__menu
        visibility visible
        left 0

  &__button
    display flex
    align-items center
    position fixed
    top 20px
    right  20px
    width 26px
    height 26px
    cursor pointer
    z-index 1

  &__stripes
  &__stripes::before
  &__stripes::after
    display block
    position absolute
    width 100%
    height 2px
    background-color $dark50
    transition-duration 0.25s

  &__stripes::before
    content ''
    top -8px

  &__stripes::after
    content ''
    top 8px

  &__menu
    display block
    position fixed
    visibility hidden
    top 0
    left -100%
    width 100%
    height 100%
    margin 0
    padding 80px 0
    background-color $green
    transition-duration 0.25s

  &__item
    display block
    padding 12px 24px
    color #333
    font-size 20px
    font-weight 600
    transition-duration 0.25s

    &:hover
      background-color #cfd8dc
