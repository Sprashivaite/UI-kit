.room-card
  position relative
  width 100%
  min-width 150px
  min-height 257px
  background #FFFFFF
  box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
  border-radius 4px
  .room-card__pictures
    margin 0
    padding 0
    overflow hidden
    height 151px 
    width 100%
    &:hover 
      ~ .room-card__button-left
      ~ .room-card__button-right
        opacity 1
  &__picture    
    opacity 0
    position absolute
    height 151px 
    width 100% 
    transition 0.3s
    &_show
      opacity 1
  .js-room-card__picture_1
    opacity 1
  &__buttons
    position absolute
    display flex
    justify-content space-between
    top 121px
    right 6px
    width 60px 
    height 10px     
    cursor pointer 
    z-index 6
    padding 10px
    [data-target="true"]
      background-color white
  &__button-circle
    height 7.49px 
    width 7.5px 
    border-radius 50% 
    border 1px solid #FFFFFF 
    box-sizing border-box 
    filter drop-shadow(0px 5px 5px rgba(31, 32, 65, 0.3)) 
    cursor pointer 
  &__button-left
    opacity 0
    position absolute 
    width 42px 
    height 151px  
    top 0 
    background linear-gradient(90deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0) 99.99%, rgba(255, 255, 255, 0) 100%)     
    cursor pointer
    transition 0.3s
    &:after
      content 'expand_more' 
      font-family 'Material Icons'
      color white
      position absolute 
      font-size 22px
      background-size cover 
      width 8px 
      height 13px 
      top 68px 
      left 18px 
      transform rotate(90deg)
    &:hover
      opacity 1
  &__button-right
    @extends .room-card__button-left
    right 0
    transform matrix(-1, 0, 0, 1, 0, 0)
    &:after
      @extends .room-card__button-left:after  
    &:hover
      opacity 1
  &__description
    position relative 
    width 85% 
    margin 19px 20px 0 
    &:after
      content ''
      position absolute
      top 31px 
      left 0
      width 230px 
      height 1px 
      border-bottom 1px solid rgba(31, 32, 65, 0.1)
    .description__num
      color #1F2041 
      display inline-block
      padding-right 8px
      &:before
        content 'â„–'
        font-size 14px
        font-weight bold
        margin-right 5px
    .description__lux
      color #BC9CFF
      display inline-block      
    .description__cost
      display inline-block
      float right
      margin-top 3px
      >*
        color rgba(31,32,65,.5) 
      span
        font-size 12px
    .description__rating
      margin-top 20px 
    .description__reviews
      text-align right
      color rgba(31, 32, 65, 0.5)
      b 
        color rgba(31, 32, 65, 0.5)
