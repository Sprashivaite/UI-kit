.footer
  min-width 280px
  width 100%
  color $dark50
  background #fff
  max-width 1160px
 
  &::before
    content ''
    position absolute
    border-top 1px solid $dark5
    width 99%
    top 0
    left 0

  @media (max-width 768px)
    display none
 
  &__top
    min-width 280px
    min-height 246px
    display grid
    grid-template-columns repeat(5, 1fr)
    grid-column-gap 40px
   
    @media (max-width 1020px)
      grid-template 1fr 1fr / 1fr 1fr 1fr
      grid-row-gap 40px
      margin-top 57px
   
    @media (max-width 759px)
      grid-template 1fr 1fr 1fr /1fr 1fr
  
    @media (max-width 520px)
      grid-template auto 1fr 1fr / 1fr 1fr
   
    @media (max-width 434px)
      grid-template auto 1fr 1fr auto 1fr / 1fr
 
  &__toxin   
    @media (max-width 1020px)
      grid-row 1 / 3
   
    @media (max-width 759px)
      grid-row 1 / 1
   
    @media (max-width 520px)
      grid-column 1 / 3
  
    @media (max-width 434px)
      grid-column 1 / 1
 
  &__logo-color
    position relative
    top -5px
 
  &__text
    width 260px
    margin-top 16px
  
  &__subscribe
    min-width 256px
    
  &__subscribe-title
    margin-bottom 19px
  
  &__email
    margin-top 25px
    margin-right 20px
    width 100%
 
  &__bot
    min-height 70px
    background #fff
    box-shadow 0 10px 20px $dark5
    width 100%
    margin-top 20px
 
  &__bot-content
    background #fff
    margin 0 auto
    display flex
    justify-content space-between
  
    @media (max-width 500px)
      justify-content center
  
    &::after
      content ''
      position absolute
      border 1px solid $dark5
      width 99%
      left 0
 
  &__copyright
    margin-top 27px
 
  &__social-networks
    margin-top 27px
    min-width 112px
    margin-left 20px
