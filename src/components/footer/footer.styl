.footer
  min-width 280px
  width 100%
  color $dark50
  background #FFFFFF
  margin 0 auto
  box-sizing border-box
  &__top
    min-width 280px
    min-height 246px
    margin 6.5625rem auto 20px
    display grid
    grid-template-columns repeat(5, 1fr)
    grid-column-gap 40px
    @media(max-width 1020px)
      grid-template 1fr 1fr / 1fr 1fr 1fr 
      grid-row-gap 40px
      margin-top 3.5625rem
    @media(max-width 759px)
      grid-template 1fr 1fr 1fr /1fr 1fr
    @media(max-width 520px)
      grid-template auto 1fr 1fr / 1fr 1fr
    @media(max-width 434px)
      grid-template auto 1fr 1fr auto 1fr / 1fr
  &__toxin
    @media(max-width 1020px)
      grid-row 1 / 3
    @media(max-width 759px)
      grid-row 1 / 1
    @media(max-width 520px)
      grid-column 1 / 3
    @media(max-width 434px)
      grid-column 1 / 1
  &__logo-color
    position relative
    top -5px
  &__text
    width 16.25rem
    margin-top 1rem
  &__subscribe
    min-width 256px
    &-title
      margin-bottom 1.1875rem
  &__email
    margin-top 25px
    margin-right 20px
    width 100%
  &__bot
    min-height 70px
    background #FFFFFF
    box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
    width 100%
  &__bot-content
    position relative
    background #FFFFFF
    margin 0 auto
    display flex
    justify-content space-between
    @media(max-width 500px)
      justify-content center
  &__copyright
    margin-top 27px
  &__social-networks
    margin-top 27px
    min-width 112px
    margin-left 20px