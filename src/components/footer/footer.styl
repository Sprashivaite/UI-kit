footer 
  border-top 1px solid rgba(31, 32, 65, 0.1)
  position relative
  flex-shrink: 0
  &:after
    content: ''
    position absolute
    border 1px solid rgba(31, 32, 65, 0.05)
    width 100%
    bottom 70px
.footer
  min-width 280px
  width 100%
  color $dark50
  background #FFFFFF
  margin 0 auto
  box-sizing border-box
  &__top
    min-width 280px
    min-height 246px
    max-width 1200px
    margin 6.5625rem auto 20px
    display grid
    grid-template-columns repeat(5, 1fr)
    grid-column-gap 40px
    @media(max-width 1020px)
      grid-template 1fr 1fr / 1fr 1fr 1fr 
      grid-row-gap 40px
      margin-top 3.5625rem
    @media(max-width 759px)
      grid-template 1fr 1fr 1fr /1fr 1fr
    @media(max-width 520px)
      grid-template auto 1fr 1fr / 1fr 1fr
    @media(max-width 434px)
      grid-template auto 1fr 1fr auto 1fr / 1fr
  &__toxin
    @media(max-width 1020px)
      grid-row 1 / 3
    @media(max-width 759px)
      grid-row 1 / 1
    @media(max-width 520px)
      grid-column 1 / 3
    @media(max-width 434px)
      grid-column 1 / 1
  &__logo-color
    position relative
    top -5px
  &__text
    width 16.25rem
    margin-top 1rem
  &__list
    h3
      margin-bottom 1.1875rem
    li
      margin-top 1rem 
  &__subscribe
    min-width 256px
    h3
      margin-bottom 1.1875rem
  &__email
    margin-top 25px
    margin-right 20px
    width 100%
  &__bot
    min-height 70px
    background #FFFFFF
    box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
    width 100%
  &__bot-content
    position relative
    background #FFFFFF
    margin 0 auto
    display flex
    justify-content space-between
    @media(max-width 500px)
      justify-content center
  &__copyright
    margin-top 1.4375rem
  &__cc
    margin-top 23px
    min-width 112px
    margin-left 20px
    ul
      display inline-flex
      justify-content space-between
      width 100%
.footer-2
  min-height 130px
  width 380px
  display flex
  flex-direction column
  justify-content space-between
  align-items center 
  &__text
    width 100%
    text-align center
  &__cc
    width 100%
    max-width 112px
    ul
      display flex
      justify-content space-between
      width 100%