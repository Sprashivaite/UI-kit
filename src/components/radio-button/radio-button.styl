.radio-button
  position relative
  min-width 110px
  display inline-flex
  cursor pointer
  
  &__label
    color $dark50
    margin-left 10px
   
    &:hover
      color $dark75
 
  &__circle
    background #fff
    border 1px solid $dark25
    box-sizing border-box
    border-radius 10px
    width 20px
    height 20px
    cursor pointer
 
    &:hover
      border 1px solid $purple
 
    &::before
      content ''
      position absolute
      width 12px
      height 12px
      left 4px
      top 4px
      background linear-gradient(180deg, $purple 0%, $blue 100%)
      border-radius 10px
      opacity 0
      transition 0.3s
 
  &__input
    visually-hidden()
 
  &__input:checked ~ .radio-button__label
    color $dark75
 
  &__input:checked ~ .radio-button__circle
    border 1px solid $purple
 
    &::before
      opacity 1
 
  &__input:focus
    ~ .radio-button__label
      color $dark100
      outline none
