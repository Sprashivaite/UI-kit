.rate-button
  &__item
    float left
   
    &::after
      content 'star_border'
      font-family 'Material Icons'
      font-size 24px
      background linear-gradient(180deg, $purple, $blue)
      -webkit-background-clip text
      -webkit-text-fill-color rgba(0, 0, 0, 0)
      background-color white
      cursor pointer

  &__item_checked
    &::after
      @extend .rate-button__item::after

      content 'star'
