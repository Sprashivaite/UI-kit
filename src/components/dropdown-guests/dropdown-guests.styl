.dropdown
  display: flex;
  min-width: 266px;
  width 100%
  position: relative;
  &__dropbtn 
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 44px;
    background: #FFFFFF;
    border: 1px solid rgba(31,32,65,.25);
    border-radius: 2px;
    padding-left: 15px;
    padding-right: 8px;
    margin-bottom: 2px;
    outline: none 
    cursor pointer
    &:hover, &:focus
      border-radius: 2px;
      border: 1px solid $dark50;
    i 
      color: rgba(31,32,65,.5);
      transition-duration: .5s;
      font-family: Material Icons;
      font-style: normal;
      font-size: 24px;
  .dropbtn__text 
    font-size: 14px;
    height: 24px;
    color:  rgba(31,32,65,.75);
.dropdown-content 
  padding: 0px 5px 6px 13px;
  box-shadow: 0px 10px 20px rgba(31, 32, 65, 0.05);
  border: 1px solid rgba(31,32,65,.5);
  display: none;
  position: absolute; 
  min-width: 266px;
  width 100%
  top: 42px;
  z-index: 3; 
  height 159px
  border-radius 2px
  background-color: #fff
  &__show
    display block  
  &__line 
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 5px;
    margin-top 3px
    width: 100%
    p, input 
      font-weight: bold;
      font-size: 12px;
      text-transform: uppercase;
      display inline-block
      color #1F2041  
  &__box-button 
    margin-top: 2px
    .minus, .plus 
      font-size: 18px;
      line-height: 22px;
      color: rgba(31, 32, 65, 0.5)
      width: 30px;
      height: 30px;
      border: 1px solid #e2e2e2;
      border-radius: 22px;
      background: white;
      outline: none    
      cursor pointer
    input 
      border: none;
      text-align: center;
      width: 29px;
.dropdown__buttons-container 
  display: flex;
  justify-content: space-between;
  margin-top: 22px;
  .clear, .submit 
    border: none;
    text-transform: uppercase;
    background-color: transparent;
    color: #BC9CFF;
    font-size: 12px;
    padding 0
    font-weight: bold
    outline: none
    cursor pointer
  .clear
    opacity 0
    


