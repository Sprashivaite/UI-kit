.date-range
  display inline-flex
  width 100%
  justify-content space-between
  color rgba(31, 32, 65, 0.75)
  flex-wrap wrap
  &__container
    width 47%
    @media(max-width 360px)
      width 100%
  &__field
    position relative
    min-width 100px  
    width 100% 
    height 44px
    border 1px solid rgba(31,32,65,.25) 
    box-sizing border-box  
    border-radius 4px 
    &:hover
      border 1px solid rgba(31,32,65,.5)  
    &:after
      content 'expand_more'
      position absolute
      font-family 'Material Icons'
      font-size 24px
      top 11px 
      right 8px 
      outline none
      border none
      color rgba(31,32,65,.5)
      outline-color rgba(31,32,65,.25)
      background-color transparent
      cursor pointer
      pointer-events none
  &__input
    width 100% 
    height 100% 
    padding-left 14px      
    outline-color none 
    border none
    color rgba(31,32,65,.75) 
    background-color transparent
    cursor pointer 
    &:hover, &:focus 
      color rgba(31, 32, 65, 0.75)
      outline none
    &::placeholder
      color rgba(31, 32, 65, 0.75) 
