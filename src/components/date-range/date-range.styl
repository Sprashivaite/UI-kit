.date-range
  display inline-flex
  width 100%
  justify-content space-between
  color $dark75
  flex-wrap wrap
  &__container
    width 47%
    @media(max-width 360px)
      width 100%
  &__field
    position relative
    min-width 100px  
    width 100% 
    height 44px
    border 1px solid $dark25
    box-sizing border-box  
    border-radius 4px 
    &:hover
      border 1px solid $dark50 
    &:after
      content 'expand_more'
      position absolute
      font-family 'Material Icons'
      font-size 24px
      top 11px 
      right 8px 
      outline none
      border none
      color $dark50
      outline-color $dark25
      background-color transparent
      cursor pointer
      pointer-events none
  &__input
    width 100% 
    height 100% 
    padding-left 14px      
    outline-color none 
    border none
    color $dark75
    background-color transparent
    cursor pointer 
    &:hover, &:focus 
      color $dark75
      outline none
    &::placeholder
      color $dark75 
