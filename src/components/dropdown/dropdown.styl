.dropdown
  display flex
  width 100%
  position relative
  &__field
    position relative
    min-width 100px
    width 100%
    height 44px
    border 1px solid $dark25
    box-sizing border-box
    border-radius 4px
    cursor pointer
    &:hover
      border 1px solid $dark50
    &::after
      content 'expand_more'
      position absolute
      font-family 'Material Icons'
      font-size 24px
      top 11px
      right 8px
      outline none
      border none
      color $dark50
      outline-color $dark25
      background-color transparent
      cursor pointer
      pointer-events none
  &__title
    height 80%
    width 90%
    padding 10px 0 0 14px
    border none
    color $dark75
    background-color transparent
    cursor pointer
    overflow hidden
  &__menu
    padding 0 5px 3px 13px
    box-shadow 0 10px 20px $dark5
    border 1px solid $dark50
    display none
    position absolute
    width 100%
    top 42px
    z-index 3
    border-radius 2px
    background-color #fff
    &_show
      display block
      animation-name opacity
      animation-duration 0.4s
    &-line
      display flex
      justify-content space-between
      align-items center
      margin-bottom 5px
      margin-top 7px
    &-box-button
      display flex
    &-item
    &-value
      font-weight bold
      font-size 12px
      text-transform uppercase
      color $dark100
      background-color #fff
    &-value
      border none
      text-align center
      width 29px
    &-minus
    &-plus
      font-size 18px
      color $dark50
      width 30px
      height 30px
      border 1px solid $dark50
      border-radius 22px
      cursor pointer
      text-align center
      line-height 29px
    &-plus
      &::after
        content '+'
    &-minus
      border 1px solid $dark25
      &::after
        content '-'
    &-minus_border
      @extend .dropdown__menu-minus

      border 1px solid $dark50
  &__buttons-container
    display flex
    justify-content space-between
    margin-top 18px
    padding-bottom 5px
  &__clear
  &__apply
    text-transform uppercase
    color $purple
    font-size 12px
    font-weight bold
    cursor pointer
  &__clear
    opacity 0
    cursor default
    transition 0.3s
    &::after
      content "очистить"
  &__apply
    &::after
      content "применить"
  &__clear_show
    opacity 1
    cursor pointer
    transition 0.3s
@keyframes opacity
  0%
    opacity 0
  100%
    opacity 1
