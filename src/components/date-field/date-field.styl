.date-field
  position relative
  min-width 100px  
  width 100% 
  height 44px
  border 1px solid $dark25
  box-sizing border-box  
  border-radius 4px 
  &:hover
    border 1px solid $dark50
  &__input
    width 100% 
    height 100% 
    padding-left 14px      
    outline-color none 
    border none
    color $dark75
    background-color transparent
    cursor pointer 
    &:hover, &:focus 
      color $dark75
      outline none
    &:placeholder
      color $dark25 