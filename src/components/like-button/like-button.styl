.like-button-container
  width 40px
  position relative
.like-button
  appearance none
  outline none
  position absolute
  float left
  width 40px
  height 20px
  background rgba(31, 32, 65, 0.25)
  box-sizing border-box
  border-radius 10px
  cursor pointer
  &::before
    background #ffffff
    content ''
    position absolute
    top 1px
    left 1px
    width 38px
    height 18px
    box-sizing border-box
    border-radius 10px 
  &__symbol
    font-family 'Material icons' 
    position absolute
    z-index 2 
    margin-left 5px
    top 6px
    font-size: 10px;
    line-height: 9px;
    color #BC9CFF
  &__symbol_checked
    display none
  &:checked
    background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%)
    ~ .like-button__symbol_checked
      @extends .like-button__symbol
      display block 
  &__value
    position absolute
    font-size 10px
    color rgba(31, 32, 65, 0.25)
    margin-left 21px
    cursor pointer
    top: -1px;
  