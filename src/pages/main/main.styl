.index
  display flex
  justify-content: space-around
  width 70%
  margin 0 auto
  .index__block-ui-kit, .index__block-pages
    margin-top 100px
    width 380px
    height 358px
    background #FFFFFF
    border 1px solid rgba(0, 0, 0, 0.12)
    box-sizing border-box
    box-shadow 0px 0px 25px rgba(0, 0, 0, 0.2)
    border-radius 4px
    h2
      margin-top 30px
      text-transform uppercase
      text-align center
    ul
      display flex
      justify-content: center
      flex-direction: column
      width 50%
      margin 20px auto
    li
      margin 20px 0
      position relative
      &:before
        content ''
        position absolute
        background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%) 
        width 10px 
        height 10px 
        border-radius 50%
        left -18px 
        margin-top 6px 
    a
      color $dark75
      font-size 16px
      font-weight bold
      text-transform uppercase
      &:hover
        color $purple

      
