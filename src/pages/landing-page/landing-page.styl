.landing-page
  background-color #FFFFFF
  width 100%
  min-height calc(100vh - 372px)
  margin 0 auto
.landing-page__img
  position relative
  background url(/assets/img/landing-page.jpg) 0 -69px no-repeat
  max-width 1920px
  min-width 320px
  width 100%
  min-height 829px
  margin 0 auto
  @media(min-width 1441px)
    background-size cover
    background-position bottom
  @media(max-width 767px)
    background none
.landing-page__log-in
  padding-top 70px
  margin-left 9.7%
  height 23.375rem
  width 23.75rem
  @media(max-width 767px) 
      margin 20px auto
.landing-page__text
    z-index 2
    margin-top 317px
    width 100%
    max-width 300px
    text-align end
    float right
    margin-right 134px
    @media(min-width 1441px)
      margin-top 267px
    @media(max-width 767px)
      margin-right 40px
      margin-top 40px