.landing-page
  background-color #FFFFFF
  width 100% 
  height 100%
  display flex
  flex-direction column
  &__container
    max-width 1160px
    width 100%
    margin 0 auto
    @media(min-width 1700px)
      max-width 1500px
    @media(max-width 1240px)
      width 90%
.landing-page__img
  position relative
  background url(../img/landing-page.jpg) 0 -69px no-repeat
  max-width 1920px
  min-width 320px
  width 100%
  min-height 829px
  margin 0 auto
  flex 1 0 auto
  @media(min-width 1441px)
    background-size cover
    background-position bottom
.landing-page__log-in
  padding-top 70px
  margin-left 9.7% 
  max-width 380px
  @media(max-width 767px) 
      margin 0 auto
      width 98%
.landing-page__text
    z-index 2
    margin-top 281px
    width 100%
    max-width 300px
    text-align end
    float right
    margin-right 134px
    @media(min-width 1441px)
      margin-top 267px
    @media(max-width 645px)
      margin-right 40px
      color $dark100
      margin-top 220px