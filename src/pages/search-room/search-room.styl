.search-rooms-page
  background-color #FFFFFF 
  min-width 320px
  min-height calc(100vh - 372px) 
  margin 0 auto
.search-rooms-body
  position relative
  min-height 1344px 
  background #fff 
  margin-top 1.4375rem 
  margin 13px 0 0 9.8% 
  display flex 
  @media(max-width 730px)
    flex-direction column 
    align-items center 
.search-rooms-page__options   
  width 266px 
  display inline-flex 
  flex-direction column 
  margin-right 4.5% 
  .options__data-filter
  .options__dropdown-guests
    margin-top 11px
  .options__range-slider
    margin-top 19px
  .options__checkbox
    margin-top 22px
    width 242px 
    legend
      margin-bottom 13px
    label 
      margin-bottom 5px
  .options__checkbox-2
    margin-top 18px
    label 
      margin-top 12px
  .options__dropdown-facilities
    margin-top 18px
  .options__checkbox-list
    margin-top 24px
.search-rooms-page__rigth-container
  display inline-flex 
  flex-direction column 
  align-items center
  @media(max-width 730px)
    margin-top 180px
.search-rooms-page__title 
  padding-top 1rem
  margin-right auto
.search-rooms-page__hotels  
  margin-top 1.3rem 
  display inline-grid
  grid-template repeat(4, 270px) / 270px 270px 270px 
  grid-row-gap 8px 
  grid-column-gap 12px
  @media(min-width 1700px)
    grid-template:repeat(3, 270px) / 270px 270px 270px 270px   
  @media(min-width 1000px) and (max-width 1300px)
    grid-template repeat(6, 270px) / 270px 270px
  @media(max-width 999px) 
    grid-template repeat(12, 270px) / 270px
.search-rooms-pagination 
  margin-top 1.8rem
  height 80px
  @media (max-width:1020px) 
    margin-left 0 