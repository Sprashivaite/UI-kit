.room-details
  background-color #FFFFFF
  &__container
    max-width 1160px
    width 100%
    margin 0 auto
    display flex
    flex-wrap wrap
    justify-content space-between
    @media(max-width 1240px)
      width 93%
    @media(max-width 600px)
      width 85%
  &__body
    position relative
    min-height 1423px
    background #fff
    max-width 1800px
    margin 0 auto
    @media(max-width 980px)
      display flex
      flex-direction column
      align-items center
  &__images
    max-width 1440px
    margin 0 auto
    display grid
    grid-template auto auto / auto auto
    @media(max-width 550px)
      grid-template auto auto auto / auto 
  &__big-image 
  &__small-image
    object-fit fill
    max-width 100%
    @media(max-width 1200px)
      width 100%
  &__big-image 
    height 100%
    width 100%
    grid-row-start span 2
    grid-column-start span 1
    margin 0 auto      
    @media(min-width 551px) and (max-width 1200px)
      grid-column-start span 2
      height auto
    @media(max-width 550px)
      grid-column-start span 1
      grid-row-start span 1
      height auto
  &__bottom-container 
    margin-top 70px
    position relative
    display inline-flex
    flex-wrap wrap
    max-width 61%
    @media(max-width 1080px)
      max-width 95%
      margin 70px auto
  &__about-the-room
    margin-right 15%
    margin-bottom 13px
    @media(max-width 816px)
      margin-right 20px    
    &-item 
      margin-top 23px
  &__diagram
    margin-bottom 40px
    max-width 311px
    width 100%
  &__comments
    min-height 300px
    display inline-flex
    flex-direction column
    width 712px
    &-title
      margin-bottom 21px
    &-item
      margin-bottom 27px
    @media(max-width 800px)
      width 100%
      margin-top 20px
  &__rules
    max-width 240px
    margin 1% 14% 10% 3%
    @media(max-width 1250px)  
      margin-right 4%    
    &-title
      margin-bottom  17px
  &__cancel
    max-width 341px
    margin-bottom 10%
    margin-top 1%
    vertical-align top
    &-title
      margin-bottom  17px
  &__reservation
    display inline-block
    vertical-align top
    margin 70px 0 20px 
    max-width 380px
    width 100%
    height 31.9375rem
    @media(max-width 1080px)
      margin 0 auto 80px
    @media(max-width 440px)
      margin-bottom 180px