.room-details
  display flex
  flex-direction column
 
  &__container
    max-width 1160px
    width 100%
    margin 0 auto
    display flex
    flex-wrap wrap
    justify-content space-between
 
    @media (max-width 1240px)
      width 93%
  
    @media (max-width 600px)
      width 100%
 
  &__body
    position relative
    max-width 1800px
    margin 0 auto
    flex 1 0 auto
   
    @media (max-width 980px)
      display flex
      flex-direction column
      align-items center
 
  &__images
    max-width 1920px
    width 100%
    margin 0 auto
    display grid
    grid-template auto auto / auto auto
   
    @media (max-width 550px)
      grid-template auto auto auto / auto
 
  &__big-image
  &__small-image
    object-fit fill
    width 100%
    height 100%
 
  &__big-image
    grid-row-start span 2
    grid-column-start span 1
    margin 0 auto
  
    @media (min-width 551px) and (max-width 1200px)
      grid-column-start span 2
      height auto
  
    @media (max-width 550px)
      grid-column-start span 1
      grid-row-start span 1
      height auto
 
  &__bottom-container
    margin-top 70px
    position relative
    display inline-flex
    flex-wrap wrap
    max-width 61%
 
    @media (max-width 1080px)
      max-width 100%
      margin 70px 30px
 
  &__about-the-room
    margin-right 15%
    margin-bottom 13px
  
    @media (max-width 816px)
      margin-right 20px
  
  &__about-the-room-item
    margin-top 24px
 
  &__diagram
    margin-bottom 40px
    max-width 311px
    width 100%
 
  &__comments
    min-height 300px
    display inline-flex
    flex-direction column
    width 712px
  
    @media (max-width 800px)
      width 100%
      margin-top 20px    

  &__comments-title
    margin-bottom 21px

  &__comments-item
    margin-bottom 27px

  &__rules
    max-width 240px
    margin 1% 14% 11% 3%
 
    @media (max-width 1250px)
      margin-right 4%
  
  &__rules-title
    margin-bottom  17px
 
  &__cancel
    max-width 341px
    margin-bottom 10%
    margin-top 1%
    vertical-align top
  
  &__cancel-title
    margin-bottom  17px
 
  &__cancel-text
    line-height 25px
 
  &__reservation
    display inline-block
    vertical-align top
    margin 70px 0 20px
    padding 0 5px
    max-width 380px
    width 100%
    height 511px
  
    @media (max-width 1080px)
      margin 0 auto 80px
  
    @media (max-width 440px)
      margin-bottom 180px
