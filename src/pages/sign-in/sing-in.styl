.sign-in
  background-color #fff
  margin 0 auto
  display flex
  flex-direction column
 
  &__container
    max-width 1160px
    width 100%
    margin 0 auto
   
    @media (max-width 1200px)
      width 90%
 
  &__img
    position relative
    background url(../img/sign-in-image.jpg) 0 -69px no-repeat
    max-width 1920px
    min-width 320px
    min-height 702px
    margin 0 auto
    display flex
    flex 1 0 auto
    width 100%
    justify-content center
    align-items center
   
    @media (min-width 1441px)
      background-size cover
      background-position bottom
 
  &__log-in
    z-index 1
    max-width 380px
    width 98%
    margin 0 auto
