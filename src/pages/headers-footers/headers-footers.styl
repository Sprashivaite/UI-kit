.headers-footers
  position relative
  min-height 1350px
  background #f4f4f6
  display flex
  flex-direction column
  align-items center
  margin 0 auto
 
  &__container
    max-width 1160px
    margin 0 auto

  &__logo
    margin-left 30px
    padding-top 30px
    align-self start
 
  &__header
    margin-top 62px
    width 100%
    min-height 70px
    background #fff
 
  &__header_reg
    margin-top 40px
    width 100%
    min-height 70px
    background #fff

  &__footer-container
    margin 104px auto 0
    max-width 1160px
 
  &__footer
    margin-top 40px
    width 100%
    background #fff
 
  &__footer-creative
    margin-top 40px
    min-height 367px
    width 100%
    max-width 768px
    background #fff
    display inline-flex
    align-items center
    justify-content center
    box-shadow 0 10px 20px $dark5

    > div
      display flex
